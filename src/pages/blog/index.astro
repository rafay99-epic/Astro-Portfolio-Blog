---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import SearchField from "../../components/SearchField.astro";
import { Image } from "astro:assets";
const posts = (await getCollection("blog")).sort(
  (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      main {
        width: 960px;
      }
      ul {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      ul li {
        width: calc(50% - 1rem);
      }
      ul li * {
        text-decoration: none;
        transition: 0.2s ease;
      }
      ul li:first-child {
        width: 100%;
        margin-bottom: 1rem;
        text-align: center;
      }
      ul li:first-child img {
        width: 100%;
      }
      ul li:first-child .title {
        font-size: 2.369rem;
      }
      ul li img {
        margin-bottom: 0.5rem;
        border-radius: 12px;
      }
      ul li a {
        display: block;
      }
      .title {
        margin: 0;
        color: var(--text-light);
        line-height: 1;
      }
      .date {
        margin: 0;
        color: rgb(var(--gray));
      }
      ul li a:hover h4,
      ul li a:hover .date {
        color: rgb(var(--accent));
      }
      ul a:hover img {
        box-shadow: var(--box-shadow);
      }
      .author-info {
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .author-image {
        border-radius: 50%;
        margin-right: 0.5rem;
        width: 32px;
        height: 32px;
      }

      .author-name {
        font-size: 1rem;
        color: var(--text-light);
      }
      @media (max-width: 720px) {
        ul {
          gap: 0.5em;
        }
        ul li {
          width: 100%;
          text-align: center;
        }
        ul li:first-child {
          margin-bottom: 0;
        }
        ul li:first-child .title {
          font-size: 1.563em;
        }
      }
      .author-image {
        border-radius: 50%;
        object-fit: cover;
      }
      .featured-post .author-image {
        width: 64px;
        height: 64px;
      }
      .author-info {
        display: flex;
        align-items: center;
        gap: 10px;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <h1>Articles</h1>
      <SearchField />
      <br />
      <section>
        <ul>
          {
            posts
              .filter((post) =>
                import.meta.env.PROD ? !post.data.draft : true
              )
              .sort(
                (a, b) =>
                  new Date(b.data.pubDate).valueOf() -
                  new Date(a.data.pubDate).valueOf()
              )
              .map((post, index) => (
                <li class={index === 0 ? "featured-post" : ""}>
                  <a href={`/blog/${post.slug}/`}>
                    <Image
                      src={post.data.heroImage || ""}
                      alt="Post Hero Image"
                      format="avif"
                      width={720}
                      height={360}
                    />
                    <h4 class="title">{post.data.title}</h4>
                    <p class="date">
                      <FormattedDate date={post.data.pubDate} />
                    </p>
                    {index !== 0 && post.data.author && (
                      <div class="author-info">
                        <Image
                          src={post.data.author.image || ""}
                          alt={`${post.data.author.name} Avatar`}
                          format="avif"
                          class="author-image"
                          width={64}
                          height={64}
                        />
                        <span class="author-name">{post.data.author.name}</span>
                      </div>
                    )}
                  </a>
                </li>
              ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
