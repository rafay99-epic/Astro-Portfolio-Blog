---
import BaseHead from "../components/AstroCompoent/base/BaseHead.astro";
import Header from "../components/AstroCompoent/header/Header.astro";
import Footer from "../components/AstroCompoent/footer/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import ProjectCard from "../components/AstroCompoent/JobAndExperience/projectCard.astro";
import authorConfig from "../config/info";
export const prerender = true;
import SpeedInsights from "@vercel/speed-insights/astro";
const projects = authorConfig.projectData;
---

<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body>
    <Header />
    <SpeedInsights />
    <main>
      <h1 class="text-6xl font-bold text-center mb-8">
        Some Things I've Built
      </h1>
      <div class="flex flex-wrap gap-5 justify-center">
        {
          projects.map((project) => (
            <ProjectCard
              title={project.title}
              description={project.description}
              imageUrl={project.imageUrl}
              technologies={project.technologies}
              githubLink={project.githubLink}
              deployedLink={project.deployedLink}
              class="flex-1 bg-gray-100 rounded-lg border border-gray-300 overflow-hidden"
            />
          ))
        }
      </div>
    </main>
    <Footer />
  </body>
</html>
