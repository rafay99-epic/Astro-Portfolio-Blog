---
import { getCollection } from "astro:content";

import BaseHead from "../components/AstroCompoent/base/BaseHead.astro";
import Header from "../components/AstroCompoent/header/Header.astro";
import Footer from "../components/AstroCompoent/footer/Footer.astro";
import SpeedInsights from "@vercel/speed-insights/astro";
import authorConfig from "../config/info";
import TagFilter from "../components/ReaactCompoents/Tags/Tags";
const posts = (await getCollection("blog")).sort(
  (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<html lang="en">
  <head>
    <BaseHead
      title={`Tags | ${authorConfig.SiteName}`}
      description={`Browse all tags on ${authorConfig.SiteName} and explore categorized content.`}
    />
  </head>

  <body>
    <Header />
    <SpeedInsights />
    <main class="w-full max-w-5xl mx-auto px-4 py-8">
      <article>
        <h1 class="text-6xl font-bold text-center mb-8">Tags</h1>
        <div>
          <TagFilter client:idle posts={posts} />
        </div>
      </article>
    </main>
    <Footer class="mt-auto" />
  </body>
</html>
