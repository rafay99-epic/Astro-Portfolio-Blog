---
import BaseHead from "../components/AstroComponent/base/BaseHead.astro";
import Header from "../components/AstroComponent/header/Header.astro";
import Footer from "../components/AstroComponent/footer/Footer.astro";
import authorConfig from "../config/siteConfig/info.json";
import { featureFlags } from "../config/featureFlag/featureFlag.json";
import SpeedInsights from "@vercel/speed-insights/astro";

export const prerender = false;

try {
    if (!featureFlags.showContact) {
        return Astro.redirect("/access-denied");
    }
} catch (error) {
    return Astro.redirect("/404");
}
---

<html lang="en">
    <head>
        <BaseHead
            title={`Let's Get Started - Lead | ${authorConfig.SiteName}`}
            description={`Get in touch with me for collaborations, projects, or just to say hello. I'm always excited to hear from fellow developers and potential clients.`}
        />
        <SpeedInsights />
        <Header />
    </head>

    <body class="bg-[#1a1b26] text-[#c0caf5] min-h-screen">
        <main class="relative pt-20 mt-0">
            <div class="container mx-auto px-4 py-8">
                <div class="max-w-2xl mx-auto">
                    <h1
                        class="text-4xl font-bold text-center mb-8 text-[#c0caf5]"
                    >
                        Let's Get Started
                    </h1>
                    <p class="text-center mb-8 text-[#a9b1d6]">
                        Ready to bring your project to life? Fill out the form
                        below and let's discuss how we can work together.
                    </p>

                    <div
                        id="mc_embed_shell"
                        class="bg-[#1f2335] rounded-lg p-6 shadow-lg border border-[#414868]"
                    >
                        <style>
                            /* Custom Mailchimp form styling to match site theme */
                            #mc_embed_signup {
                                background: transparent !important;
                                font-family: inherit !important;
                                width: 100% !important;
                                max-width: none !important;
                            }

                            #mc_embed_signup h2 {
                                color: #c0caf5 !important;
                                font-size: 1.5rem !important;
                                font-weight: 600 !important;
                                margin-bottom: 1rem !important;
                                text-align: center !important;
                            }

                            .indicates-required {
                                color: #a9b1d6 !important;
                                font-size: 0.875rem !important;
                                margin-bottom: 1.5rem !important;
                                text-align: center !important;
                            }

                            .asterisk {
                                color: #f7768e !important;
                            }

                            .mc-field-group {
                                margin-bottom: 1.5rem !important;
                            }

                            .mc-field-group label {
                                color: #c0caf5 !important;
                                font-weight: 500 !important;
                                display: block !important;
                                margin-bottom: 0.5rem !important;
                                font-size: 0.875rem !important;
                            }

                            .mc-field-group input,
                            .mc-field-group select {
                                width: 100% !important;
                                padding: 0.75rem !important;
                                border: 1px solid #414868 !important;
                                border-radius: 0.5rem !important;
                                background: #24283b !important;
                                color: #c0caf5 !important;
                                font-size: 0.875rem !important;
                                transition: all 0.2s ease !important;
                            }

                            .mc-field-group input:focus,
                            .mc-field-group select:focus {
                                outline: none !important;
                                border-color: #7aa2f7 !important;
                                box-shadow: 0 0 0 3px rgba(122, 162, 247, 0.1) !important;
                            }

                            .mc-field-group input::placeholder {
                                color: #565a6e !important;
                            }

                            .mc-field-group select option {
                                background: #24283b !important;
                                color: #c0caf5 !important;
                            }

                            .button {
                                background: linear-gradient(
                                    135deg,
                                    #7aa2f7,
                                    #bb9af7
                                ) !important;
                                color: #1a1b26 !important;
                                border: none !important;
                                padding: 0.875rem 2rem !important;
                                border-radius: 0.5rem !important;
                                font-weight: 600 !important;
                                font-size: 0.875rem !important;
                                cursor: pointer !important;
                                transition: all 0.2s ease !important;
                                width: 100% !important;
                                margin-top: 1rem !important;
                            }

                            .button:hover {
                                transform: translateY(-2px) !important;
                                box-shadow: 0 4px 12px rgba(122, 162, 247, 0.3) !important;
                            }

                            .button:active {
                                transform: translateY(0) !important;
                            }

                            #mce-responses {
                                margin-top: 1rem !important;
                            }

                            #mce-error-response {
                                background: rgba(247, 118, 142, 0.1) !important;
                                border: 1px solid #f7768e !important;
                                color: #f7768e !important;
                                padding: 0.75rem !important;
                                border-radius: 0.5rem !important;
                                margin-bottom: 1rem !important;
                            }

                            #mce-success-response {
                                background: rgba(154, 237, 135, 0.1) !important;
                                border: 1px solid #9aee87 !important;
                                color: #9aee87 !important;
                                padding: 0.75rem !important;
                                border-radius: 0.5rem !important;
                                margin-bottom: 1rem !important;
                            }

                            .optionalParent {
                                margin-top: 1.5rem !important;
                            }

                            .optionalParent p {
                                text-align: center !important;
                                margin-top: 1rem !important;
                            }

                            .optionalParent a {
                                color: #7aa2f7 !important;
                                text-decoration: none !important;
                            }

                            .optionalParent a:hover {
                                text-decoration: underline !important;
                            }

                            .refferal_badge {
                                filter: brightness(0.8) !important;
                            }
                        </style>

                        <div id="mc_embed_signup">
                            <form
                                action="https://rafay99.us4.list-manage.com/subscribe/post?u=7316a11f3072ef061881d3279&id=f09a6d16d0&f_id=000bc8e0f0"
                                method="post"
                                id="mc-embedded-subscribe-form"
                                name="mc-embedded-subscribe-form"
                                class="validate"
                                target="_self"
                                novalidate=""
                            >
                                <div id="mc_embed_signup_scroll">
                                    <h2>Get In Touch</h2>
                                    <div class="indicates-required">
                                        <span class="asterisk">*</span> indicates
                                        required
                                    </div>

                                    <div class="mc-field-group">
                                        <label for="mce-EMAIL"
                                            >Email Address <span
                                                class="asterisk">*</span
                                            ></label
                                        >
                                        <input
                                            type="email"
                                            name="EMAIL"
                                            class="required email"
                                            id="mce-EMAIL"
                                            required=""
                                            value=""
                                            placeholder="your.email@example.com"
                                        />
                                    </div>

                                    <div class="mc-field-group">
                                        <label for="mce-FNAME">First Name</label
                                        >
                                        <input
                                            type="text"
                                            name="FNAME"
                                            class="text"
                                            id="mce-FNAME"
                                            value=""
                                            placeholder="John"
                                        />
                                    </div>

                                    <div class="mc-field-group">
                                        <label for="mce-LNAME">Last Name</label>
                                        <input
                                            type="text"
                                            name="LNAME"
                                            class="text"
                                            id="mce-LNAME"
                                            value=""
                                            placeholder="Doe"
                                        />
                                    </div>

                                    <div class="mc-field-group">
                                        <label for="mce-COMPANY">Company</label>
                                        <input
                                            type="text"
                                            name="COMPANY"
                                            class="text"
                                            id="mce-COMPANY"
                                            value=""
                                            placeholder="Your Company"
                                        />
                                    </div>

                                    <div class="mc-field-group">
                                        <label for="mce-MMERGE7">Message</label>
                                        <input
                                            type="text"
                                            name="MMERGE7"
                                            class="text"
                                            id="mce-MMERGE7"
                                            value=""
                                            placeholder="Tell me about your project..."
                                        />
                                    </div>

                                    <div class="mc-field-group">
                                        <label for="mce-MMERGE8"
                                            >What type of project are you
                                            interested in?</label
                                        >
                                        <select
                                            name="MMERGE8"
                                            class=""
                                            id="mce-MMERGE8"
                                        >
                                            <option value=""
                                                >Select project type...</option
                                            >
                                            <option
                                                value="Custom Web Application"
                                                >Custom Web Application</option
                                            >
                                            <option
                                                value="Mobile App Development"
                                                >Mobile App Development</option
                                            >
                                            <option
                                                value="Technical Consultation & Strategy"
                                                >Technical Consultation &
                                                Strategy</option
                                            >
                                            <option
                                                value="Backend & API Development"
                                                >Backend & API Development</option
                                            >
                                        </select>
                                    </div>

                                    <div id="mce-responses" class="clear foot">
                                        <div
                                            class="response"
                                            id="mce-error-response"
                                            style="display: none;"
                                        >
                                        </div>
                                        <div
                                            class="response"
                                            id="mce-success-response"
                                            style="display: none;"
                                        >
                                        </div>
                                    </div>

                                    <div
                                        aria-hidden="true"
                                        style="position: absolute; left: -5000px;"
                                    >
                                        <input
                                            type="text"
                                            name="b_7316a11f3072ef061881d3279_f09a6d16d0"
                                            tabindex="-1"
                                            value=""
                                        />
                                    </div>

                                    <div class="optionalParent">
                                        <div class="clear foot">
                                            <input
                                                type="submit"
                                                name="subscribe"
                                                id="mc-embedded-subscribe"
                                                class="button"
                                                value="Send Message"
                                            />
                                            <p style="margin: 0px auto;">
                                                <a
                                                    href="http://eepurl.com/jkQDxA"
                                                    title="Mailchimp - email marketing made easy and fun"
                                                >
                                                    <span
                                                        style="display: inline-block; background-color: transparent; border-radius: 4px;"
                                                    >
                                                        <img
                                                            class="refferal_badge"
                                                            src="https://digitalasset.intuit.com/render/content/dam/intuit/mc-fe/en_us/images/intuit-mc-rewards-text-light.svg"
                                                            alt="Intuit Mailchimp"
                                                            style="width: 220px; height: 40px; display: flex; padding: 2px 0px; justify-content: center; align-items: center;"
                                                        />
                                                    </span>
                                                </a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>

                        <script
                            type="text/javascript"
                            src="//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js"
                        ></script>
                        <script type="text/javascript">
                            (function ($) {
                                window.fnames = new Array();
                                window.ftypes = new Array();
                                fnames[0] = "EMAIL";
                                ftypes[0] = "email";
                                fnames[1] = "FNAME";
                                ftypes[1] = "text";
                                fnames[2] = "LNAME";
                                ftypes[2] = "text";
                                fnames[6] = "COMPANY";
                                ftypes[6] = "text";
                                fnames[7] = "MMERGE7";
                                ftypes[7] = "text";
                                fnames[8] = "MMERGE8";
                                ftypes[8] = "dropdown";
                                fnames[3] = "ADDRESS";
                                ftypes[3] = "address";
                                fnames[4] = "PHONE";
                                ftypes[4] = "phone";
                                fnames[5] = "BIRTHDAY";
                                ftypes[5] = "birthday";
                            })(jQuery);
                            var $mcj = jQuery.noConflict(true);
                        </script>
                    </div>
                </div>
            </div>
        </main>

        <Footer />
    </body>
</html>
