---
import BaseHead from "../components/AstroCompoent/base/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

export const prerender = true;
import SpeedInsights from "@vercel/speed-insights/astro";
import ErrorPageCompeont from "../components/ReaactCompoents/ErroPage/404-Compoent";
import LottieReactCompoent from "../components/ReaactCompoents/LottieAnimation/LottieAnimation";
import animationData from "../assets/animation/error_2.json";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <SpeedInsights />
  </head>
  <body class="min-h-screen overflow-hidden flex">
    <SpeedInsights />
    <main class="flex flex-1 justify-center items-center w-full h-screen">
      <div
        class="flex flex-col justify-center w-full md:w-1/2 text-center md:text-left"
      >
        <div class="animated-text-container">
          <ErrorPageCompeont client:load />
        </div>
      </div>
      <div class="flex flex-col justify-center w-full md:w-1/2">
        <div class="mx-auto w-3/4 h-3/4 md:w-[400px] md:h-[400px]">
          <LottieReactCompoent
            client:only
            animationData={animationData}
            loop={true}
            autoplay={true}
            width={400}
            height={400}
          />
        </div>
      </div>
    </main>
  </body>
</html>
