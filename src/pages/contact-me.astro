---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import LottieReactCompoent from "../components/ReaactCompoents/LottieAnimation/LottieAnimation";
import contactPageAnimation from "../assets/animation/contact-lottie.json";
export const prerender = true;
---

<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <script src="https://unpkg.com/@lottiefiles/lottie-player@1"></script>
    <style>
      @media (max-width: 767px) {
        .lottie-animation {
          display: none;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main class="container mx-auto py-16 px-4 sm:px-6 lg:px-8">
      <h1 class="text-5xl text-center font-bold mb-12">Let's Collaborate</h1>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="bg-gray-800 p-8 rounded-lg shadow-lg">
          <form
            id="contactForm"
            action="https://api.web3forms.com/submit"
            method="POST"
            class="space-y-6"
          >
            <input
              type="hidden"
              name="access_key"
              value="c0613ed5-2935-40a1-8d33-b32fd9eea403"
            />
            <div>
              <label for="name" class="block text-sm font-medium text-gray-200"
                >Name</label
              >
              <input
                type="text"
                id="name"
                name="name"
                required
                class="mt-1 p-2 block w-full rounded-md bg-gray-700 border-gray-500 focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-gray-200"
                >Email</label
              >
              <input
                type="email"
                id="email"
                name="email"
                required
                class="mt-1 p-2 block w-full rounded-md bg-gray-700 border-gray-500 focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50"
              />
            </div>
            <div>
              <label
                for="message"
                class="block text-sm font-medium text-gray-200">Message</label
              >
              <textarea
                id="message"
                name="message"
                rows="10"
                required
                class="mt-1 p-2 block w-full rounded-md bg-gray-700 border-gray-500 focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50"
              ></textarea>
            </div>
            <input
              type="checkbox"
              name="botcheck"
              class="hidden"
              style="display: none;"
            />
            <div>
              <button
                type="submit"
                class="w-full py-2 px-4 bg-indigo-600 hover:bg-indigo-700 rounded-full text-white font-medium transition duration-300"
              >
                Send Message
              </button>
            </div>
          </form>
        </div>
        <div class="flex justify-center items-center lottie-animation">
          <LottieReactCompoent
            client:only
            animationData={contactPageAnimation}
            loop={true}
            autoplay={true}
          />
        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>

