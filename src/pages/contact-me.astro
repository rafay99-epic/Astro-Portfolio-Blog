---
import BaseHead from "@astro/base/BaseHead.astro";
import Header from "../components/AstroComponent/header/Header.astro";
import Footer from "@astro/footer/Footer.astro";
import authorConfig from "@config/siteConfig/info.json";
import { featureFlags } from "@config/featureFlag/featureFlag.json";

export const prerender = false;

try {
  if (!featureFlags.showContact) {
    return Astro.redirect("/access-denied");
  }
} catch (error) {
  return Astro.redirect("/404");
}
---

<html lang="en">
  <head>
    <BaseHead
      title={`Contact Me | ${authorConfig.SiteName}`}
      description={`Get in touch with me for collaborations, projects, or just to say hello. I'm always excited to hear from fellow developers and potential clients.`}
    />
  </head>

  <body class="min-h-screen bg-[#1a1b26] text-[#c0caf5]">
    <Header />

    <main class="pt-15 relative mt-0">
      <section class="px-4 py-16 text-center sm:px-6 sm:py-20 lg:px-8">
        <div class="mx-auto max-w-4xl">
          <h1
            class="mb-6 bg-gradient-to-r from-[#7aa2f7] via-[#bb9af7] to-[#9ece6a] bg-clip-text text-4xl font-black leading-tight text-transparent sm:text-5xl lg:text-6xl"
          >
            Let's Build Something Amazing
          </h1>
          <p
            class="mx-auto max-w-2xl text-lg leading-relaxed text-[#a9b1d6] sm:text-xl"
          >
            Ready to bring your ideas to life? Let's discuss your project and
            create something extraordinary together.
          </p>
        </div>
      </section>

      <section class="mx-auto max-w-6xl px-4 pb-20 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 gap-8 lg:grid-cols-5 lg:gap-12">
          <div class="space-y-6 lg:col-span-2">
            <div
              class="rounded-2xl border border-[#414868]/30 bg-[#24283b]/50 p-6 backdrop-blur-sm"
            >
              <h2 class="mb-6 text-2xl font-bold text-[#7aa2f7]">
                Get In Touch
              </h2>

              <div class="space-y-4">
                <div
                  class="flex items-center gap-4 rounded-xl border border-[#414868]/20 bg-[#1a1b26]/50 p-4 transition-colors hover:border-[#7aa2f7]/30"
                >
                  <div
                    class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-xl bg-gradient-to-r from-[#7aa2f7] to-[#bb9af7]"
                  >
                    <svg
                      class="h-6 w-6 text-white"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                      ></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-[#c0caf5]">Email</h3>
                    <p class="text-sm text-[#a9b1d6]">99marafay@gmail.com</p>
                  </div>
                </div>

                <div
                  class="flex items-center gap-4 rounded-xl border border-[#414868]/20 bg-[#1a1b26]/50 p-4 transition-colors hover:border-[#9ece6a]/30"
                >
                  <div
                    class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-xl bg-gradient-to-r from-[#9ece6a] to-[#7aa2f7]"
                  >
                    <svg
                      class="h-6 w-6 text-white"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-[#c0caf5]">Response Time</h3>
                    <p class="text-sm text-[#a9b1d6]">Within 24 hours</p>
                  </div>
                </div>

                <div
                  class="flex items-center gap-4 rounded-xl border border-[#414868]/20 bg-[#1a1b26]/50 p-4 transition-colors hover:border-[#bb9af7]/30"
                >
                  <div
                    class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-xl bg-gradient-to-r from-[#bb9af7] to-[#9ece6a]"
                  >
                    <svg
                      class="h-6 w-6 text-white"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                      ></path>
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-[#c0caf5]">Location</h3>
                    <p class="text-sm text-[#a9b1d6]">Remote Worldwide</p>
                  </div>
                </div>
              </div>
            </div>

            <div
              class="rounded-2xl border border-[#414868]/30 bg-[#24283b]/50 p-6 backdrop-blur-sm"
            >
              <h3 class="mb-4 text-xl font-bold text-[#7aa2f7]">What I Do</h3>
              <div class="grid grid-cols-2 gap-3">
                <div class="flex items-center gap-2">
                  <div class="h-2 w-2 rounded-full bg-[#7aa2f7]"></div>
                  <span class="text-sm text-[#a9b1d6]">Web Development</span>
                </div>
                <div class="flex items-center gap-2">
                  <div class="h-2 w-2 rounded-full bg-[#bb9af7]"></div>
                  <span class="text-sm text-[#a9b1d6]">Mobile Apps</span>
                </div>
                <div class="flex items-center gap-2">
                  <div class="h-2 w-2 rounded-full bg-[#9ece6a]"></div>
                  <span class="text-sm text-[#a9b1d6]">UI/UX Design</span>
                </div>
                <div class="flex items-center gap-2">
                  <div class="h-2 w-2 rounded-full bg-[#f7768e]"></div>
                  <span class="text-sm text-[#a9b1d6]">Consulting</span>
                </div>
              </div>
            </div>
          </div>

          <div class="lg:col-span-3">
            <div
              class="rounded-2xl border border-[#414868]/30 bg-[#24283b]/50 p-6 backdrop-blur-sm sm:p-8"
            >
              <div class="mb-8 text-center">
                <h2
                  class="mb-2 bg-gradient-to-r from-[#7aa2f7] to-[#bb9af7] bg-clip-text text-3xl font-bold text-transparent"
                >
                  Send Message
                </h2>
                <p class="text-[#a9b1d6]">Tell me about your project</p>
              </div>

              <div id="mc_embed_shell">
                <div id="mc_embed_signup">
                  <form
                    action="https://rafay99.us4.list-manage.com/subscribe/post?u=7316a11f3072ef061881d3279&id=f09a6d16d0&f_id=000bc8e0f0"
                    method="post"
                    id="mc-embedded-subscribe-form"
                    name="mc-embedded-subscribe-form"
                    class="validate"
                    target="_self"
                    novalidate=""
                  >
                    <div id="mc_embed_signup_scroll">
                      <h2
                        class="mb-6 text-center text-2xl font-bold text-[#c0caf5]"
                      >
                        Get In Touch
                      </h2>
                      <div
                        class="indicates-required mb-6 text-center text-sm text-[#a9b1d6]"
                      >
                        <span class="asterisk text-[#f7768e]">*</span> indicates
                        required
                      </div>

                      <div class="space-y-6">
                        <div class="mc-field-group">
                          <label
                            for="mce-EMAIL"
                            class="mb-2 block text-sm font-semibold text-[#c0caf5]"
                          >
                            Email Address <span class="asterisk text-[#f7768e]"
                              >*</span
                            >
                          </label>
                          <input
                            type="email"
                            name="EMAIL"
                            class="required email w-full rounded-xl border-2 border-[#414868]/40 bg-[#1a1b26]/60 px-4 py-3 text-[#c0caf5] placeholder-[#565f89] transition-colors focus:border-[#7aa2f7] focus:outline-none focus:ring-0"
                            id="mce-EMAIL"
                            required=""
                            value=""
                            placeholder="your.email@example.com"
                          />
                        </div>

                        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                          <div class="mc-field-group">
                            <label
                              for="mce-FNAME"
                              class="mb-2 block text-sm font-semibold text-[#c0caf5]"
                              >First Name</label
                            >
                            <input
                              type="text"
                              name="FNAME"
                              class="text w-full rounded-xl border-2 border-[#414868]/40 bg-[#1a1b26]/60 px-4 py-3 text-[#c0caf5] placeholder-[#565f89] transition-colors focus:border-[#7aa2f7] focus:outline-none focus:ring-0"
                              id="mce-FNAME"
                              value=""
                              placeholder="John"
                            />
                          </div>

                          <div class="mc-field-group">
                            <label
                              for="mce-LNAME"
                              class="mb-2 block text-sm font-semibold text-[#c0caf5]"
                              >Last Name</label
                            >
                            <input
                              type="text"
                              name="LNAME"
                              class="text w-full rounded-xl border-2 border-[#414868]/40 bg-[#1a1b26]/60 px-4 py-3 text-[#c0caf5] placeholder-[#565f89] transition-colors focus:border-[#7aa2f7] focus:outline-none focus:ring-0"
                              id="mce-LNAME"
                              value=""
                              placeholder="Doe"
                            />
                          </div>
                        </div>

                        <div class="mc-field-group">
                          <label
                            for="mce-COMPANY"
                            class="mb-2 block text-sm font-semibold text-[#c0caf5]"
                            >Company</label
                          >
                          <input
                            type="text"
                            name="COMPANY"
                            class="text w-full rounded-xl border-2 border-[#414868]/40 bg-[#1a1b26]/60 px-4 py-3 text-[#c0caf5] placeholder-[#565f89] transition-colors focus:border-[#7aa2f7] focus:outline-none focus:ring-0"
                            id="mce-COMPANY"
                            value=""
                            placeholder="Your Company"
                          />
                        </div>

                        <div class="mc-field-group">
                          <label
                            for="mce-PHONE"
                            class="mb-2 block text-sm font-semibold text-[#c0caf5]"
                            >Phone Number</label
                          >
                          <input
                            type="tel"
                            name="PHONE"
                            class="text w-full rounded-xl border-2 border-[#414868]/40 bg-[#1a1b26]/60 px-4 py-3 text-[#c0caf5] placeholder-[#565f89] transition-colors focus:border-[#7aa2f7] focus:outline-none focus:ring-0"
                            id="mce-PHONE"
                            value=""
                            placeholder="+1 (555) 123-4567"
                          />
                        </div>

                        <div class="mc-field-group">
                          <label
                            for="mce-MMERGE7"
                            class="mb-2 block text-sm font-semibold text-[#c0caf5]"
                            >Message</label
                          >
                          <textarea
                            name="MMERGE7"
                            class="text w-full resize-none rounded-xl border-2 border-[#414868]/40 bg-[#1a1b26]/60 px-4 py-3 text-[#c0caf5] placeholder-[#565f89] transition-colors focus:border-[#7aa2f7] focus:outline-none focus:ring-0"
                            id="mce-MMERGE7"
                            rows="4"
                            value=""
                            placeholder="Tell me about your project..."
                          ></textarea>
                        </div>

                        <div class="mc-field-group">
                          <label
                            for="mce-MMERGE8"
                            class="mb-2 block text-sm font-semibold text-[#c0caf5]"
                          >
                            What type of project are you interested in?
                          </label>
                          <select
                            name="MMERGE8"
                            class="w-full rounded-xl border-2 border-[#414868]/40 bg-[#1a1b26]/60 px-4 py-3 text-[#c0caf5] transition-colors focus:border-[#7aa2f7] focus:outline-none focus:ring-0"
                            id="mce-MMERGE8"
                          >
                            <option value="">Select project type...</option>
                            <option value="Custom Web Application"
                              >Custom Web Application</option
                            >
                            <option value="Mobile App Development"
                              >Mobile App Development</option
                            >
                            <option value="Technical Consultation & Strategy"
                              >Technical Consultation & Strategy</option
                            >
                            <option value="Backend & API Development"
                              >Backend & API Development</option
                            >
                          </select>
                        </div>
                      </div>

                      <div id="mce-responses" class="clear foot mt-6">
                        <div
                          class="response"
                          id="mce-error-response"
                          style="display: none;"
                        >
                        </div>
                        <div
                          class="response"
                          id="mce-success-response"
                          style="display: none;"
                        >
                        </div>
                      </div>

                      <div
                        id="custom-success-message"
                        class="mb-4 hidden rounded-xl border border-[#9ece6a]/30 bg-[#9ece6a]/20 p-4 text-center font-medium text-[#9ece6a]"
                      >
                        ✅ Message sent successfully! I'll get back to you soon.
                      </div>

                      <div
                        aria-hidden="true"
                        style="position: absolute; left: -5000px;"
                      >
                        <input
                          type="text"
                          name="b_7316a11f3072ef061881d3279_f09a6d16d0"
                          tabindex="-1"
                          value=""
                        />
                      </div>

                      <div class="optionalParent mt-8">
                        <div class="clear foot">
                          <input
                            type="submit"
                            name="subscribe"
                            id="mc-embedded-subscribe"
                            class="w-full cursor-pointer rounded-xl bg-gradient-to-r from-[#7aa2f7] to-[#bb9af7] px-6 py-4 font-bold text-white transition-all duration-300 hover:shadow-lg hover:shadow-[#7aa2f7]/25 focus:outline-none focus:ring-4 focus:ring-[#7aa2f7]/20"
                            value="Send Message"
                          />
                          <p class="mt-4 text-center text-sm text-[#a9b1d6]">
                            <a
                              href="http://eepurl.com/jkQDxA"
                              title="Mailchimp - email marketing made easy and fun"
                            >
                              <span
                                style="display: inline-block; background-color: transparent; border-radius: 4px;"
                              >
                                <img
                                  class="refferal_badge"
                                  src="https://digitalasset.intuit.com/render/content/dam/intuit/mc-fe/en_us/images/intuit-mc-rewards-text-light.svg"
                                  alt="Intuit Mailchimp"
                                  style="width: 220px; height: 40px; display: flex; padding: 2px 0px; justify-content: center; align-items: center; filter: brightness(0.8);"
                                />
                              </span>
                            </a>
                          </p>
                        </div>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <Footer />

    <script is:inline type="text/javascript">
      (function () {
        window.fnames = new Array();
        window.ftypes = new Array();
        fnames[0] = "EMAIL";
        ftypes[0] = "email";
        fnames[1] = "FNAME";
        ftypes[1] = "text";
        fnames[2] = "LNAME";
        ftypes[2] = "text";
        fnames[3] = "COMPANY";
        ftypes[3] = "text";
        fnames[4] = "PHONE";
        ftypes[4] = "phone";
        fnames[5] = "MMERGE7";
        ftypes[5] = "text";
        fnames[6] = "MMERGE8";
        ftypes[6] = "dropdown";
        fnames[7] = "ADDRESS";
        ftypes[7] = "address";
        fnames[8] = "BIRTHDAY";
        ftypes[8] = "birthday";
      })();

      document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById("mc-embedded-subscribe-form");
        const successMessage = document.getElementById(
          "custom-success-message",
        );

        if (form) {
          form.addEventListener("submit", function () {
            successMessage.classList.remove("hidden");

            setTimeout(() => {
              form.reset();

              setTimeout(() => {
                successMessage.classList.add("hidden");
              }, 5000);
            }, 1000);
          });
        }
      });
    </script>
  </body>
</html>
