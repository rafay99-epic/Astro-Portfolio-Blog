---
import BaseHead from "../components/AstroCompoent/base/BaseHead.astro";
import Header from "../components/AstroCompoent/header/Header.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import "../styles/home/home-page.css";
import JobExperience from "../components/AstroCompoent/JobAndExperience/JobExperience.astro";
import authorConfig from "../config/info";
export const prerender = true;
import Footer from "../components/AstroCompoent/footer/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body>
    <Header />
    <main>
      <div class="side-by-side-containers">
        <div class="left-container">
          <div
            class="lottie-animation-container"
            style="width: 70%; height: 70%;"
          >
            <img src={authorConfig.picture} alt="Profile Image" />
          </div>
        </div>
        <div class="right-container">
          <div>
            <div class="animated-text-container">
              <h2 class="animated-text">So, who am I?</h2>
            </div>
            <p
              style="font-size: 1.2rem; text-align: justify; font-weight: normal;"
              class="animated-text fade-slide-in description"
            >
              {authorConfig.about.whoAmI}
            </p>
            <p
              style="font-size: 1.2rem; text-align: justify; font-weight: normal;"
              class="animated-text fade-slide-in description"
            >
              {authorConfig.about.lifeBeyondCode}
            </p>
            <p
              style="font-size: 1.2rem; text-align: justify; font-weight: normal;"
              class="animated-text fade-slide-in description"
            >
              {authorConfig.about.continuousLearning}
            </p>
          </div>
        </div>
      </div>
      <br />
      <JobExperience />
    </main>
    <Footer />
  </body>
</html>
