---
import BaseHead from "../components/AstroComponent/base/BaseHead.astro";
import Header from "../components/AstroComponent/header/Header.astro";
import authorConfig from "../config/siteConfig/info.json";
import Footer from "../components/AstroComponent/footer/Footer.astro";
import { featureFlags } from "../config/featureFlag/featureFlag.json";
import AboutSection from "../components/AstroComponent/personal/AboutMe/AboutMe.astro";

export const prerender = true;

try {
  if (!featureFlags.showAbout) {
    return Astro.redirect("/access-denied");
  }
} catch (error) {
  return Astro.redirect("/400");
}
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`About Me | ${authorConfig.SiteName}`}
      description={`Learn more about me and my journey.`}
    />
  </head>
  <body class="mt-0 pt-0">
    <Header />
    <main class="mt-0 pt-15">
      <AboutSection authorConfig={authorConfig} />
    </main>
    <Footer class="mt-auto" />
  </body>
</html>
