---
import BaseHead from "../components/AstroCompoent/base/BaseHead.astro";
import Header from "../components/AstroCompoent/header/Header.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import SocialLinks from "../components/AstroCompoent/SocialMedia/SocialMedia.astro";
import "../styles/home/home-page.css";
export const prerender = true;
import SpeedInsights from "@vercel/speed-insights/astro";
import Footer from "../components/AstroCompoent/footer/Footer.astro";
import FeaturedPost from "../components/AstroCompoent/home/FeaturePost/featurePost.astro";
import LatestPost from "../components/AstroCompoent/home/LatestPost/LatestPost.astro";
import SkillsShowcase from "../components/ReaactCompoents/JobSkills/jobSkills";
import ContactFormHome from "../components/ReaactCompoents/ConrtactForm/HomePageContact";
import authorConfig from "../config/info";
const { name, jobTitle, position, picture } = authorConfig;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <SpeedInsights />
    <main>
      <section>
        <div class="main-container">
          <div class="side-by-side-containers">
            <div class="left-container">
              <div class="animated-text-container">
                <h1 class="animated-text fade-slide-in">Hi There!</h1>
                <h2 class="animated-text fade-slide-in">I'm {name}</h2>
                <p class="animated-text fade-slide-in description">
                  {jobTitle} | {position}
                </p>
                <div class="animated-text fade-slide-in social-links-container">
                  <SocialLinks />
                  <button
                    class="animated-text fade-slide-in connect-button"
                    onclick="window.location.href = '/contact-me';"
                    >Connect with Me</button
                  >
                </div>
              </div>
            </div>
            <div class="right-container">
              <div class="relative flex items-center justify-center">
                <div class="animate-random-blob"></div>
                <img
                  src={picture}
                  alt="Profile Image"
                  class="relative z-10 w-[26rem] h-[26rem] rounded-full object-cover shadow-2xl"
                />
              </div>
            </div>
          </div>
        </div>
      </section>
      <!-- Next section: Feature Content -->
      <section style="margin-top: 12rem;">
        <FeaturedPost />
      </section>

      <section style="margin-top: 5rem;">
        <LatestPost />
      </section>

      <section style="margin-top: 5rem;">
        <h1 class="text-center text-6xl font-bold mb-6">Tool & Technology</h1>
        <p class="text-center text-lg font-bold mb-6">
          I have experience with these technologies
        </p>
        <SkillsShowcase client:idle />
      </section>

      <section style="margin-top: 5rem; margin-bottom: 10rem;">
        <h1 class="text-6xl font-bold text-center text-[#c0caf5] leading-snug">
          I'D BE HAPPY TO CONNECT
          <span
            class="bg-gradient-to-r from-blue-500 via-blue-700 to-teal-600 text-transparent bg-clip-text"
          >
            WITH YOU
          </span>
        </h1>
        <p class="text-center text-lg font-bold mb-6">
          Let's Connect & Build Something Together
        </p>
        <ContactFormHome client:idle />
      </section>

      <!-- footer -->
      <Footer />
    </main>
  </body>
</html>
