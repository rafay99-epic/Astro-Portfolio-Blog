---
import BaseHead from "@components/AstroComponent/base/BaseHead.astro";
import Footer from "@components/AstroComponent/footer/Footer.astro";
import Header from "@components/AstroComponent/header/Header.astro";
import ContactMap from "@components/AstroComponent/home/ContactMap/ContactMap.astro";
import CoreService from "@components/AstroComponent/home/core-service/core_service.astro";
import HeroSection from "@components/AstroComponent/home/Hero/HeroSection.astro";
import PortfolioSection from "@components/AstroComponent/home/portfolio/portfolio.astro";
import TestimonialsSection from "@components/AstroComponent/home/testimonials/testimonials.astro";
import ProcessShowcase from "@components/AstroComponent/personal/Process/ProcessShowcase.astro";
import SkillsShowcase from "@components/AstroComponent/personal/SkillsShowcase/SkillsShowcase.astro";
import { featureFlags } from "@config/featureFlag/featureFlag.json";
import authorConfig from "@config/siteConfig/info.json";
export const prerender = true;

const { name, jobTitle, position, picture, socialLinks } = authorConfig;
try {
	if (!featureFlags.showIndex) {
		return Astro.redirect("/access-denied");
	}
} catch (_error) {
	return Astro.redirect("/404");
}
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={authorConfig?.SiteName ?? ""}
      description={authorConfig?.SiteDescription ?? ""}
    />
    <style>
      /* Override global main styles for homepage */
      main[data-page="home"] {
        max-width: 100%;
        margin: 0;
        padding: 0;
        width: 100%;
      }
      .reveal-section {
        opacity: 0;
        transform: translateY(16px);
        transition: opacity 0.6s ease-out, transform 0.6s ease-out;
      }
      .reveal-section.is-visible {
        opacity: 1;
        transform: translateY(0);
      }
    </style>
  </head>
  <body class="bg-[#1a1b26]">
    <Header />
    <main data-page="home">
      <HeroSection
        name={name}
        jobTitle={jobTitle}
        position={position}
        picture={picture}
        socialLinks={socialLinks}
      />

      {featureFlags.enableCoreServices && (
        <div class="reveal-section">
          <CoreService />
        </div>
      )}

      {featureFlags.enableProcessShowcase && (
        <div class="reveal-section">
          <ProcessShowcase />
        </div>
      )}

      {featureFlags.enablePortfolioSection && (
        <div class="reveal-section">
          <PortfolioSection />
        </div>
      )}

      {featureFlags.enableTestimonialsSection && (
        <div class="reveal-section">
          <TestimonialsSection />
        </div>
      )}

      {featureFlags.enableSkillsShowcase && (
        <div class="reveal-section">
          <SkillsShowcase />
        </div>
      )}

      <div id="contact-section" class="reveal-section">
        {featureFlags.enableContactMap && <ContactMap />}
      </div>

      <Footer class="mt-auto" />
    </main>

    <script>
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add("is-visible");
              observer.unobserve(entry.target);
            }
          });
        },
        { threshold: 0.08, rootMargin: "0px 0px -40px 0px" },
      );

      document.querySelectorAll(".reveal-section").forEach((el) => {
        observer.observe(el);
      });
    </script>
  </body>
</html>
