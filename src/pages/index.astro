---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import LottieAnimation from "astro-integration-lottie/Lottie.astro";
import SocialLinks from "../components/SocialMedia.astro";
import "../styles/home/home-page.css";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
</html>
<body>
  <Header />
  <main>
    <div class="side-by-side-containers">
      <div class="left-container">
        <div class="animated-text-container">
          <h1 class="animated-text fade-slide-in">Hi There!</h1>
          <h2 class="animated-text fade-slide-in">I'm Abdul Rafay</h2>
          <p class="animated-text fade-slide-in description">
            Software Engineer | Full Stack & Flutter Developer
          </p>
          <div class="animated-text fade-slide-in social-links-container">
            <SocialLinks />
            <button class="animated-text fade-slide-in connect-button"
              >Connect with Me</button
            >
          </div>
        </div>
      </div>
      <div class="right-container">
        <div class="lottie-animation-container">
          <LottieAnimation
            src="/animation/rafay_animation.json"
            autoplay="visible"
          />
        </div>
      </div>
    </div>
  </main>
</body>
