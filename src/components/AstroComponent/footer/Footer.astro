---
import SocialMedia from "@astro/SocialMedia/SocialMedia.astro";
import { featureFlags } from "@config/featureFlag/featureFlag.json";
import authorConfig from "@config/siteConfig/info.json";
import packageJson from "@package.json";
---

<footer
  class="border-t border-[#565f89]/20 bg-[#1a1b26]/30 px-4 pb-6 pt-10"
  transition:name="footer"
>
  <div class="container mx-auto max-w-6xl">
    <div class="mb-8 grid grid-cols-1 gap-10 sm:grid-cols-2 lg:grid-cols-3">
      <!-- Brand -->
      <div class="sm:col-span-2 lg:col-span-1">
        <div class="mb-4 flex items-center gap-3">
          <img
            src={authorConfig.avator}
            alt={authorConfig.name}
            class="h-12 w-12 rounded-full border-2 border-[#7aa2f7]/30"
            loading="lazy"
          />
          <div>
            <h3 class="text-lg font-semibold text-[#c0caf5]">
              {authorConfig.name}
            </h3>
            <p class="text-sm text-[#565f89]">{authorConfig.jobTitle}</p>
          </div>
        </div>
        <p class="mb-5 max-w-xs text-sm leading-relaxed text-[#565f89]">
          {authorConfig.SiteDescription}
        </p>
        <SocialMedia class="flex gap-4 text-[#565f89]" />
      </div>

      <!-- Navigate -->
      <div>
        <h3
          class="mb-4 text-xs font-semibold uppercase tracking-wider text-[#565f89]"
        >
          Navigate
        </h3>
        <nav class="flex flex-col gap-2.5">
          {
            featureFlags.showAbout && (
              <a
                href="/about"
                class="text-sm text-[#a9b1d6] transition-colors duration-200 hover:text-[#7aa2f7]"
              >
                About
              </a>
            )
          }
          {
            featureFlags.showBlog && (
              <a
                href="/blog"
                class="text-sm text-[#a9b1d6] transition-colors duration-200 hover:text-[#7aa2f7]"
              >
                Blog
              </a>
            )
          }
          {
            featureFlags.showProjects && (
              <a
                href="/project"
                class="text-sm text-[#a9b1d6] transition-colors duration-200 hover:text-[#7aa2f7]"
              >
                Projects
              </a>
            )
          }
          {
            featureFlags.showContact && (
              <a
                href="/contact-me"
                class="text-sm text-[#a9b1d6] transition-colors duration-200 hover:text-[#7aa2f7]"
              >
                Contact
              </a>
            )
          }
        </nav>
      </div>

      <!-- Resources -->
      <div>
        <h3
          class="mb-4 text-xs font-semibold uppercase tracking-wider text-[#565f89]"
        >
          Resources
        </h3>
        <nav class="flex flex-col gap-2.5">
          {
            featureFlags.showPrivacyPolicy && (
              <a
                href="/privacy-policy"
                class="text-sm text-[#a9b1d6] transition-colors duration-200 hover:text-[#7aa2f7]"
              >
                Privacy Policy
              </a>
            )
          }
          {
            featureFlags.showTermsOfService && (
              <a
                href="/terms-and-conditions"
                class="text-sm text-[#a9b1d6] transition-colors duration-200 hover:text-[#7aa2f7]"
              >
                Terms of Service
              </a>
            )
          }
          {
            featureFlags.showWiki && (
              <a
                href="https://rafay99-docs.vercel.app/"
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm text-[#a9b1d6] transition-colors duration-200 hover:text-[#7aa2f7]"
              >
                Documentation
              </a>
            )
          }
          <a
            href="https://github.com/rafay99-epic"
            target="_blank"
            rel="noopener noreferrer"
            class="text-sm text-[#a9b1d6] transition-colors duration-200 hover:text-[#7aa2f7]"
          >
            GitHub
          </a>
        </nav>
      </div>
    </div>

    <!-- Bottom bar -->
    <div
      class="flex flex-col items-center justify-between gap-3 border-t border-[#565f89]/10 pt-6 text-xs text-[#565f89] sm:flex-row"
    >
      <p>
        &copy; {new Date().getFullYear()}
        {authorConfig.name}
      </p>
      <p>v{(packageJson as { version: string }).version}</p>
    </div>
  </div>
</footer>
