---
import authorConfig from "@config/siteConfig/info.json";

const coreStack = authorConfig.coreStack;
---

<style>
  .tech-card {
    transition: all 0.3s ease;
  }

  .tech-card:hover {
    transform: translateY(-2px);
    border-color: rgba(65, 72, 104, 0.4);
    background-color: rgba(36, 40, 59, 0.5);
  }

  .tech-icon {
    transition: transform 0.3s ease;
  }

  .tech-card:hover .tech-icon {
    transform: scale(1.08);
  }
</style>

<section class="relative overflow-hidden bg-[#1a1b26] px-4 py-14 sm:px-8 sm:py-20 lg:px-12">
  <div class="mx-auto max-w-6xl">
    <!-- Section header -->
    <div class="mb-8 text-center sm:mb-10">
      <p class="mb-3 text-xs font-semibold uppercase tracking-[0.2em] text-[#7aa2f7]">
        Technologies
      </p>
      <h2
        style="font-size: clamp(1.875rem, 3.5vw, 3rem); line-height: 1.2;"
        class="mb-4 font-bold text-[#c0caf5]"
      >
        Core Tech
        <span class="bg-gradient-to-r from-[#7aa2f7] to-[#bb9af7] bg-clip-text text-transparent">
          Stack
        </span>
      </h2>
      <p class="mx-auto max-w-lg text-[#a9b1d6]" style="font-size: clamp(0.875rem, 1.2vw, 1.125rem);">
        Technologies I use daily to build production-ready applications
      </p>
    </div>

    <!-- Tech grid -->
    <div class="grid grid-cols-2 gap-3 sm:grid-cols-3 sm:gap-4 lg:grid-cols-4 lg:gap-5">
      {
        coreStack.map((tech) => (
          <div class="tech-card rounded-2xl border border-[#414868]/20 bg-[#24283b]/30 p-4 text-center sm:p-6">
            <div class="mb-3">
              <i
                class={`devicon-${tech.icon}-plain colored tech-icon text-4xl sm:text-5xl`}
                style={`color: ${tech.color};`}
              />
            </div>
            <h3 class="mb-1 text-sm font-semibold text-[#c0caf5]">
              {tech.name}
            </h3>
            <p class="text-xs text-[#565f89]">
              {tech.context}
            </p>
          </div>
        ))
      }
    </div>

    <!-- CTA -->
    <div class="mt-12 text-center">
      <a
        href="/project"
        class="inline-flex items-center gap-2 text-sm font-medium text-[#565f89] transition-colors duration-300 hover:text-[#7aa2f7]"
      >
        See these technologies in action
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
