---
import authorConfig from "@config/siteConfig/info.json";

const stats = authorConfig.stats;
---

<style>
  .fade-in {
    opacity: 0;
    animation: fadeIn 0.8s ease-out forwards;
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }

  .slide-up {
    opacity: 0;
    transform: translateY(30px);
    animation: slideUp 0.8s ease-out forwards;
  }

  @keyframes slideUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .gradient-text {
    background: linear-gradient(135deg, #7aa2f7, #bb9af7, #9ece6a);
    background-size: 200% 200%;
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradientShift 3s ease-in-out infinite;
  }

  @keyframes gradientShift {
    0%,
    100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .profile-image {
    transition: transform 0.5s ease;
  }

  .profile-wrapper:hover .profile-image {
    transform: scale(1.05);
  }

  .glass-card {
    background: rgba(36, 40, 59, 0.2);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
  }

  .stat-card {
    opacity: 0;
    transform: scale(0.9);
    animation: statPop 0.6s ease-out forwards;
  }

  .stat-card:nth-child(1) {
    animation-delay: 0.2s;
  }
  .stat-card:nth-child(2) {
    animation-delay: 0.3s;
  }
  .stat-card:nth-child(3) {
    animation-delay: 0.4s;
  }

  @keyframes statPop {
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .floating {
    animation: float 6s ease-in-out infinite;
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }
</style>

<section class="relative min-h-screen overflow-hidden px-4 py-16 lg:py-24">
  <!-- Background Effects -->
  <div class="absolute inset-0">
    <div
      class="floating from-[#7aa2f7]/8 to-[#bb9af7]/8 absolute left-10 top-20 h-32 w-32 rounded-full bg-gradient-to-r blur-3xl"
    >
    </div>
    <div
      class="floating from-[#bb9af7]/8 to-[#9ece6a]/8 absolute bottom-20 right-10 h-40 w-40 rounded-full bg-gradient-to-r blur-3xl"
      style="animation-delay: -2s;"
    >
    </div>
  </div>

  <div class="container relative z-10 mx-auto max-w-5xl">
    <!-- Hero Section -->
    <div class="fade-in mb-12 text-center">
      <div class="profile-wrapper relative mx-auto mb-8 inline-block">
        <img
          src={authorConfig?.picture ?? ""}
          alt={authorConfig.name}
          class="profile-image h-64 w-64 rounded-3xl object-cover shadow-2xl sm:h-80 sm:w-80 lg:h-96 lg:w-96"
          loading="eager"
        />
        <div
          class="absolute -bottom-4 -right-4 rounded-full bg-gradient-to-r from-[#9ece6a] to-[#7aa2f7] px-6 py-3 text-base font-semibold text-white shadow-lg"
        >
          Available for Work
        </div>
      </div>

      <h1
        class="gradient-text mb-4 font-poppins text-5xl font-black sm:text-6xl lg:text-7xl"
      >
        {authorConfig.name}
      </h1>
      <p
        class="mb-3 font-poppins text-xl font-semibold text-[#7aa2f7] sm:text-2xl lg:text-3xl"
      >
        {authorConfig.jobTitle}
      </p>
      <p
        class="mx-auto max-w-2xl font-poppins text-lg text-[#a9b1d6] sm:text-xl"
      >
        {authorConfig.tag_line}
      </p>
    </div>

    <!-- Stats Row -->
    <div class="slide-up mb-16 grid grid-cols-3 gap-4 lg:gap-6">
      {
        stats.map((stat) => (
          <div class="stat-card glass-card rounded-2xl p-6 text-center transition-all duration-300 hover:-translate-y-1 hover:transform hover:bg-[#24283b]/40">
            <div class="mb-2 font-poppins text-4xl font-black text-[#7aa2f7] lg:text-5xl">
              {stat.value}
            </div>
            <div class="font-poppins text-sm text-[#a9b1d6]">{stat.label}</div>
          </div>
        ))
      }
    </div>

    <!-- Bio Content -->
    <div
      class="slide-up glass-card rounded-3xl p-8 lg:p-12"
      style="animation-delay: 0.3s;"
    >
      <div class="space-y-10">
        <!-- The Engineer Section -->
        <div>
          <div class="mb-5 flex items-center">
            <div
              class="mr-4 h-1 w-16 rounded-full bg-gradient-to-r from-[#7aa2f7] to-transparent"
            >
            </div>
            <h2
              class="font-poppins text-2xl font-bold text-[#7aa2f7] lg:text-3xl"
            >
              The Engineer
            </h2>
          </div>
          <p
            class="font-poppins text-lg leading-[1.9] text-[#c0caf5] lg:text-xl"
          >
            {authorConfig.about.whoAmI}
          </p>
        </div>

        <!-- Divider -->
        <div
          class="h-px bg-gradient-to-r from-transparent via-[#414868]/40 to-transparent"
        >
        </div>

        <!-- Beyond the Screen Section -->
        <div>
          <div class="mb-5 flex items-center">
            <div
              class="mr-4 h-1 w-16 rounded-full bg-gradient-to-r from-[#bb9af7] to-transparent"
            >
            </div>
            <h2
              class="font-poppins text-2xl font-bold text-[#bb9af7] lg:text-3xl"
            >
              Beyond the Screen
            </h2>
          </div>
          <p
            class="font-poppins text-lg leading-[1.9] text-[#c0caf5] lg:text-xl"
          >
            {authorConfig.about.lifeBeyondCode}
          </p>
        </div>

        <!-- Divider -->
        <div
          class="h-px bg-gradient-to-r from-transparent via-[#414868]/40 to-transparent"
        >
        </div>

        <!-- Continuous Growth Section -->
        <div>
          <div class="mb-5 flex items-center">
            <div
              class="mr-4 h-1 w-16 rounded-full bg-gradient-to-r from-[#9ece6a] to-transparent"
            >
            </div>
            <h2
              class="font-poppins text-2xl font-bold text-[#9ece6a] lg:text-3xl"
            >
              Continuous Growth
            </h2>
          </div>
          <p
            class="font-poppins text-lg leading-[1.9] text-[#c0caf5] lg:text-xl"
          >
            {authorConfig.about.continuousLearning}
          </p>
        </div>
      </div>
    </div>

    <!-- CTA Section -->
    <div class="slide-up mt-12 text-center" style="animation-delay: 0.5s;">
      <a
        href="/contact-me"
        aria-label="Contact Abdul Rafay"
        class="inline-flex items-center space-x-3 rounded-2xl bg-gradient-to-r from-[#7aa2f7] to-[#bb9af7] px-10 py-5 font-poppins text-lg font-semibold text-white shadow-lg transition-all duration-300 hover:-translate-y-1 hover:transform hover:shadow-2xl"
      >
        <span>Let's Work Together</span>
        <svg
          class="h-6 w-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>

      <div
        class="mt-6 flex flex-col items-center justify-center space-y-2 font-poppins text-sm text-[#a9b1d6] sm:flex-row sm:space-x-6 sm:space-y-0"
      >
        <div class="flex items-center space-x-2">
          <div class="h-2 w-2 animate-pulse rounded-full bg-[#9ece6a]"></div>
          <span>Open to opportunities</span>
        </div>
        <div class="flex items-center space-x-2">
          <div
            class="h-2 w-2 animate-pulse rounded-full bg-[#7aa2f7]"
            style="animation-delay: 0.5s;"
          >
          </div>
          <span>Remote friendly</span>
        </div>
      </div>
    </div>
  </div>
</section>
