---
import authorConfig from "@config/siteConfig/info.json";

const { services } = authorConfig;

const serviceIcons = {
	"Mobile App Development": `<svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
    <path d="M17 1.01L7 1c-1.1 0-2 .9-2 2v18c0 1.1.9 2 2 2h10c1.1 0 2-.9 2-2V3c0-1.1-.9-1.99-2-1.99zM17 19H7V5h10v14z"/>
    <path d="M12 18c.83 0 1.5-.67 1.5-1.5S12.83 15 12 15s-1.5.67-1.5 1.5S11.17 18 12 18z"/>
  </svg>`,
	"Web Development": `<svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.94-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
  </svg>`,
	"Full-Stack Solutions": `<svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
    <path d="M3 3h18v2H3V3zm0 4h18v2H3V7zm0 4h18v2H3v-2zm0 4h18v2H3v-2zm0 4h18v2H3v-2z"/>
    <path d="M6 6h12v1H6V6zm0 4h12v1H6v-1zm0 4h12v1H6v-1zm0 4h12v1H6v-1z"/>
  </svg>`,
	"Cloud & DevOps": `<svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
    <path d="M19.35 10.04C18.67 6.59 15.64 4 12 4 9.11 4 6.6 5.64 5.35 8.04 2.34 8.36 0 10.91 0 14c0 3.31 2.69 6 6 6h13c2.76 0 5-2.24 5-5 0-2.64-2.05-4.78-4.65-4.96z"/>
  </svg>`,
};
---

<section class="relative bg-[#1a1b26] px-4 py-14 sm:px-8 sm:py-20 lg:px-12">
  <div class="mx-auto max-w-6xl">
    <!-- Section header -->
    <div class="mb-8 text-center sm:mb-10">
      <p class="mb-3 text-xs font-semibold uppercase tracking-[0.2em] text-[#7aa2f7]">
        What I Do
      </p>
      <h2
        style="font-size: clamp(1.875rem, 3.5vw, 3rem); line-height: 1.2;"
        class="mb-4 font-bold text-[#c0caf5]"
      >
        Core
        <span class="bg-gradient-to-r from-[#7aa2f7] to-[#bb9af7] bg-clip-text text-transparent">
          Services
        </span>
      </h2>
      <p class="mx-auto max-w-lg text-[#a9b1d6]" style="font-size: clamp(0.875rem, 1.2vw, 1.125rem);">
        Professional development solutions for modern businesses
      </p>
    </div>

    <!-- Service cards -->
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 sm:gap-5 lg:gap-6">
      {
        services.map((service) => (
          <div
            class="service-card rounded-2xl border border-[#414868]/20 bg-[#24283b]/30 p-5 transition-all duration-300 hover:border-[#7aa2f7]/20 hover:bg-[#24283b]/50 sm:p-8"
          >
            <div class="mb-4 flex items-start gap-3 sm:mb-5 sm:gap-4">
              <div class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-xl bg-[#7aa2f7]/10 text-[#7aa2f7] sm:h-11 sm:w-11">
                <div
                  set:html={
                    serviceIcons[service.title] || serviceIcons["Web Development"]
                  }
                />
              </div>
              <div>
                <h3 class="text-lg font-bold text-[#c0caf5] sm:text-xl">
                  {service.title}
                </h3>
              </div>
            </div>

            <p class="mb-5 text-sm leading-relaxed text-[#a9b1d6]">
              {service.description}
            </p>

            <div class="flex flex-wrap gap-1.5">
              {service.technologies.slice(0, 4).map((tech) => (
                <span class="rounded-full bg-[#1a1b26]/60 px-2.5 py-1 text-xs text-[#565f89]">
                  {tech}
                </span>
              ))}
              {service.technologies.length > 4 && (
                <span class="rounded-full bg-[#7aa2f7]/10 px-2.5 py-1 text-xs font-medium text-[#7aa2f7]">
                  +{service.technologies.length - 4} more
                </span>
              )}
            </div>
          </div>
        ))
      }
    </div>

    <!-- CTA -->
    <div class="mt-10 text-center">
      <a
        href="/contact-me"
        class="group inline-flex items-center gap-2 rounded-full bg-gradient-to-r from-[#7aa2f7] to-[#bb9af7] px-7 py-3 text-sm font-semibold text-white shadow-lg shadow-[#7aa2f7]/20 transition-all duration-300 hover:shadow-xl hover:shadow-[#7aa2f7]/30"
      >
        <span>Start Your Project</span>
        <svg
          class="h-4 w-4 transition-transform duration-300 group-hover:translate-x-1"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
