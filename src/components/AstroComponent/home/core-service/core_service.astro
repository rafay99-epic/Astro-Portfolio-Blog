---
import authorConfig from "@config/siteConfig/info.json";
const { services } = authorConfig;

const serviceIcons = {
  "Mobile App Development": `<svg class="w-8 h-8 text-[#7aa2f7]" viewBox="0 0 24 24" fill="currentColor">
    <path d="M17 1.01L7 1c-1.1 0-2 .9-2 2v18c0 1.1.9 2 2 2h10c1.1 0 2-.9 2-2V3c0-1.1-.9-1.99-2-1.99zM17 19H7V5h10v14z"/>
    <path d="M12 18c.83 0 1.5-.67 1.5-1.5S12.83 15 12 15s-1.5.67-1.5 1.5S11.17 18 12 18z"/>
  </svg>`,
  "Web Development": `<svg class="w-8 h-8 text-[#7aa2f7]" viewBox="0 0 24 24" fill="currentColor">
    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.94-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
  </svg>`,
  "Full-Stack Solutions": `<svg class="w-8 h-8 text-[#7aa2f7]" viewBox="0 0 24 24" fill="currentColor">
    <path d="M3 3h18v2H3V3zm0 4h18v2H3V7zm0 4h18v2H3v-2zm0 4h18v2H3v-2zm0 4h18v2H3v-2z"/>
    <path d="M6 6h12v1H6V6zm0 4h12v1H6v-1zm0 4h12v1H6v-1zm0 4h12v1H6v-1z"/>
  </svg>`,
  "Cloud & DevOps": `<svg class="w-8 h-8 text-[#7aa2f7]" viewBox="0 0 24 24" fill="currentColor">
    <path d="M19.35 10.04C18.67 6.59 15.64 4 12 4 9.11 4 6.6 5.64 5.35 8.04 2.34 8.36 0 10.91 0 14c0 3.31 2.69 6 6 6h13c2.76 0 5-2.24 5-5 0-2.64-2.05-4.78-4.65-4.96z"/>
  </svg>`,
};
---

<section class="relative bg-[#1a1b26] px-4 py-16 sm:px-6 sm:py-20 lg:px-8">
  <div class="mx-auto max-w-6xl">
    <div class="mb-12 text-center sm:mb-16">
      <h2
        class="mb-4 text-3xl font-black text-[#c0caf5] sm:text-4xl lg:text-5xl"
      >
        Core
        <span
          class="bg-gradient-to-r from-[#7aa2f7] to-[#bb9af7] bg-clip-text text-transparent"
        >
          Services
        </span>
      </h2>
      <p class="mx-auto max-w-2xl text-base text-[#a9b1d6] sm:text-lg">
        Professional development solutions for modern businesses
      </p>
    </div>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 sm:gap-8">
      {
        services.map((service, index) => (
          <div
            class="group rounded-xl border border-[#414868]/30 bg-[#24283b]/50 p-6 transition-all duration-300 hover:-translate-y-1 hover:border-[#7aa2f7]/30 sm:p-8"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <div class="mb-4 flex items-baseline gap-3">
              <div
                class="flex flex-shrink-0 items-center"
                set:html={
                  serviceIcons[service.title] || serviceIcons["Web Development"]
                }
              />
              <h3 class="text-xl font-bold text-[#c0caf5] transition-colors group-hover:text-[#7aa2f7] sm:text-2xl">
                {service.title}
              </h3>
            </div>

            <p class="mb-4 text-sm leading-relaxed text-[#a9b1d6] sm:text-base">
              {service.description}
            </p>

            <div class="flex flex-wrap gap-2">
              {service.technologies.slice(0, 4).map((tech) => (
                <span class="rounded-md border border-[#414868]/30 bg-[#1a1b26]/50 px-2 py-1 text-xs text-[#a9b1d6]">
                  {tech}
                </span>
              ))}
              {service.technologies.length > 4 && (
                <span class="rounded-md border border-[#7aa2f7]/30 bg-[#7aa2f7]/20 px-2 py-1 text-xs text-[#7aa2f7]">
                  +{service.technologies.length - 4} more
                </span>
              )}
            </div>
          </div>
        ))
      }
    </div>

    <div class="mt-12 text-center sm:mt-16">
      <a
        href="/contact-me"
        class="inline-flex items-center gap-2 rounded-xl bg-gradient-to-r from-[#7aa2f7] to-[#bb9af7] px-6 py-3 font-semibold text-white transition-all duration-300 hover:shadow-lg hover:shadow-[#7aa2f7]/25"
      >
        <span>Start Your Project</span>
        <svg
          class="h-4 w-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .group {
    animation: fadeInUp 0.5s ease-out forwards;
    opacity: 0;
    transform: translateY(20px);
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .group:nth-child(1) {
    animation-delay: 0.1s;
  }
  .group:nth-child(2) {
    animation-delay: 0.2s;
  }
  .group:nth-child(3) {
    animation-delay: 0.3s;
  }
  .group:nth-child(4) {
    animation-delay: 0.4s;
  }
</style>
