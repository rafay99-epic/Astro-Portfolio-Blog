---
import authorConfig from "../../../../config/siteConfig/info.json";
const { services } = authorConfig;
---

<section class="relative py-16 sm:py-20 px-4 sm:px-6 lg:px-8 bg-[#1a1b26]">
  <div class="max-w-6xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-12 sm:mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-black text-[#c0caf5] mb-4">
        Core
        <span class="bg-gradient-to-r from-[#7aa2f7] to-[#bb9af7] bg-clip-text text-transparent">
          Services
        </span>
      </h2>
      <p class="text-base sm:text-lg text-[#a9b1d6] max-w-2xl mx-auto">
        Professional development solutions for modern businesses
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 sm:gap-8">
      {services.map((service, index) => (
        <div 
          class="group bg-[#24283b]/50 border border-[#414868]/30 rounded-xl p-6 sm:p-8 hover:border-[#7aa2f7]/30 hover:-translate-y-1 transition-all duration-300"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <!-- Service Header -->
          <div class="flex items-center gap-3 mb-4">
            <div class="text-2xl sm:text-3xl">{service.icon}</div>
            <h3 class="text-xl sm:text-2xl font-bold text-[#c0caf5] group-hover:text-[#7aa2f7] transition-colors">
              {service.title}
            </h3>
          </div>

          <!-- Service Description -->
          <p class="text-sm sm:text-base text-[#a9b1d6] mb-4 leading-relaxed">
            {service.description}
          </p>

          <!-- Key Technologies -->
          <div class="flex flex-wrap gap-2">
            {service.technologies.slice(0, 4).map((tech) => (
              <span class="px-2 py-1 bg-[#1a1b26]/50 border border-[#414868]/30 rounded-md text-xs text-[#a9b1d6]">
                {tech}
              </span>
            ))}
            {service.technologies.length > 4 && (
              <span class="px-2 py-1 bg-[#7aa2f7]/20 border border-[#7aa2f7]/30 rounded-md text-xs text-[#7aa2f7]">
                +{service.technologies.length - 4} more
              </span>
            )}
          </div>
        </div>
      ))}
    </div>

    <!-- Simple CTA -->
    <div class="text-center mt-12 sm:mt-16">
      <a 
        href="/contact-me" 
        class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-[#7aa2f7] to-[#bb9af7] text-white font-semibold rounded-xl hover:shadow-lg hover:shadow-[#7aa2f7]/25 transition-all duration-300"
      >
        <span>Start Your Project</span>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .group {
    animation: fadeInUp 0.5s ease-out forwards;
    opacity: 0;
    transform: translateY(20px);
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .group:nth-child(1) { animation-delay: 0.1s; }
  .group:nth-child(2) { animation-delay: 0.2s; }
  .group:nth-child(3) { animation-delay: 0.3s; }
  .group:nth-child(4) { animation-delay: 0.4s; }
</style>
