---
import { getCollection } from "astro:content";

const allProjects = await getCollection("projects");
const topProjects = allProjects
  .filter((project) => !project.data.draft)
  .sort((a, b) => {
    const rankingA = parseInt(a.data.ProjectRanking || "9999", 10);
    const rankingB = parseInt(b.data.ProjectRanking || "9999", 10);
    return rankingA - rankingB;
  })
  .slice(0, 6);
---

<section class="relative bg-[#1a1b26] px-4 py-16 sm:px-6 sm:py-20 lg:px-8">
  <div class="mx-auto max-w-7xl">
    <div class="mb-12 text-center sm:mb-16">
      <h2
        class="mb-4 text-3xl font-black text-[#c0caf5] sm:text-4xl lg:text-5xl"
      >
        Featured
        <span
          class="bg-gradient-to-r from-[#7aa2f7] to-[#bb9af7] bg-clip-text text-transparent"
        >
          Projects
        </span>
      </h2>
      <p class="mx-auto max-w-2xl text-base text-[#a9b1d6] sm:text-lg">
        A showcase of my best work, built with modern technologies and designed
        for real-world impact
      </p>
    </div>

    <div class="grid grid-cols-1 gap-6 sm:gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        topProjects.map((project, index) => (
          <div
            class="group relative overflow-hidden rounded-xl border border-[#414868]/30 bg-[#24283b]/50 transition-all duration-500 hover:-translate-y-2 hover:border-[#7aa2f7]/30 hover:shadow-2xl hover:shadow-[#7aa2f7]/10"
            style={`animation-delay: ${index * 0.1}s`}
          >
            {project.data.ProjectImage && (
              <div class="relative h-48 overflow-hidden sm:h-56">
                <img
                  src={project.data.ProjectImage}
                  alt={project.data.Projecttitle}
                  class="h-full w-full object-cover transition-transform duration-700 group-hover:scale-110"
                  loading="lazy"
                />

                <div class="absolute inset-0 bg-gradient-to-t from-[#1a1b26] via-transparent to-transparent opacity-60 transition-opacity duration-300 group-hover:opacity-40" />

                {project.data.ProjectRanking && (
                  <div class="absolute right-4 top-4 rounded-lg bg-gradient-to-r from-[#7aa2f7] to-[#bb9af7] px-2 py-1 text-xs font-bold text-white shadow-lg">
                    #{project.data.ProjectRanking}
                  </div>
                )}

                {project.data.ProjectCategory &&
                  project.data.ProjectCategory.length > 0 && (
                    <div class="absolute left-4 top-4 rounded-lg border border-[#7aa2f7]/30 bg-[#1a1b26]/80 px-2 py-1 text-xs font-medium text-[#7aa2f7] backdrop-blur-sm">
                      {project.data.ProjectCategory[0]}
                    </div>
                  )}
              </div>
            )}

            <div class="p-6">
              <h3 class="mb-2 text-xl font-bold text-[#c0caf5] transition-colors duration-300 group-hover:text-[#7aa2f7]">
                {project.data.Projecttitle}
              </h3>

              <p class="mb-4 line-clamp-3 text-sm leading-relaxed text-[#a9b1d6]">
                {project.data.ProjectDescription}
              </p>

              {project.data.ProjectTech &&
                project.data.ProjectTech.length > 0 && (
                  <div class="mb-4 flex flex-wrap gap-2">
                    {project.data.ProjectTech.slice(0, 3).map((tech) => (
                      <span class="rounded-md border border-[#414868]/30 bg-[#1a1b26]/50 px-2 py-1 text-xs text-[#a9b1d6]">
                        {tech}
                      </span>
                    ))}
                    {project.data.ProjectTech.length > 3 && (
                      <span class="rounded-md border border-[#7aa2f7]/30 bg-[#7aa2f7]/20 px-2 py-1 text-xs text-[#7aa2f7]">
                        +{project.data.ProjectTech.length - 3} more
                      </span>
                    )}
                  </div>
                )}

              <div class="flex gap-3">
                {project.data.ProjectDeployedLink && (
                  <a
                    href={project.data.ProjectDeployedLink}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex-1 rounded-lg bg-gradient-to-r from-[#7aa2f7] to-[#bb9af7] px-4 py-2 text-center text-sm font-semibold text-white transition-all duration-300 hover:shadow-lg hover:shadow-[#7aa2f7]/25"
                  >
                    Live Demo
                  </a>
                )}

                {project.data.ProjectGithubLink && (
                  <a
                    href={project.data.ProjectGithubLink}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="rounded-lg border border-[#7aa2f7] px-4 py-2 text-sm font-semibold text-[#7aa2f7] transition-all duration-300 hover:bg-[#7aa2f7] hover:text-white"
                  >
                    <svg
                      class="h-4 w-4"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                    </svg>
                  </a>
                )}
              </div>
            </div>

            <div class="pointer-events-none absolute inset-0 rounded-xl bg-gradient-to-br from-[#7aa2f7]/5 to-[#bb9af7]/5 opacity-0 transition-opacity duration-500 group-hover:opacity-100" />
          </div>
        ))
      }
    </div>

    <div class="mt-12 text-center sm:mt-16">
      <a
        href="/project"
        class="group inline-flex items-center gap-2 rounded-xl bg-gradient-to-r from-[#7aa2f7] to-[#bb9af7] px-8 py-4 font-semibold text-white transition-all duration-300 hover:shadow-lg hover:shadow-[#7aa2f7]/25"
      >
        <span>View All Projects</span>
        <svg
          class="h-5 w-5 transition-transform duration-300 group-hover:translate-x-1"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .group {
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
    transform: translateY(30px);
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .group:nth-child(1) {
    animation-delay: 0.1s;
  }
  .group:nth-child(2) {
    animation-delay: 0.2s;
  }
  .group:nth-child(3) {
    animation-delay: 0.3s;
  }
  .group:nth-child(4) {
    animation-delay: 0.4s;
  }
  .group:nth-child(5) {
    animation-delay: 0.5s;
  }
  .group:nth-child(6) {
    animation-delay: 0.6s;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
