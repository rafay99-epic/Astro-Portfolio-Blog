---
import authorConfig from "@config/siteConfig/info.json";

interface SocialLinks {
  twitter: string;
  github: string;
  upwork: string;
  youtube: string;
  whatsNumber: string;
  linkedin: string;
}

interface Props {
  name: string;
  jobTitle: string;
  position: string;
  picture: string;
  socialLinks: SocialLinks;
}

const { name, jobTitle, picture, socialLinks } = Astro.props as Props;
const stats = authorConfig.stats;
---

<style is:global>
  @keyframes orbScale1 {
    0%,
    100% {
      transform: scale(1);
      opacity: 0.4;
    }
    50% {
      transform: scale(1.05);
      opacity: 0.6;
    }
  }
  @keyframes orbScale2 {
    0%,
    100% {
      transform: scale(1.05);
      opacity: 0.5;
    }
    50% {
      transform: scale(1);
      opacity: 0.7;
    }
  }
  @keyframes orbScale3 {
    0%,
    100% {
      transform: scale(1);
      opacity: 0.3;
    }
    50% {
      transform: scale(1.1);
      opacity: 0.5;
    }
  }
  @keyframes orbScale4 {
    0%,
    100% {
      transform: scale(1.1);
      opacity: 0.4;
    }
    50% {
      transform: scale(1);
      opacity: 0.6;
    }
  }
  @keyframes rotate-slow {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }
  @keyframes fade-up {
    0% {
      opacity: 0;
      transform: translateY(24px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-orb-1 {
    animation: orbScale1 12s ease-in-out infinite;
    will-change: transform, opacity;
  }
  .animate-orb-2 {
    animation: orbScale2 10s ease-in-out infinite;
    will-change: transform, opacity;
  }
  .animate-orb-3 {
    animation: orbScale3 15s ease-in-out infinite;
    will-change: transform, opacity;
  }
  .animate-orb-4 {
    animation: orbScale4 13s ease-in-out infinite;
    will-change: transform, opacity;
  }
  .animate-rotate-slow {
    animation: rotate-slow 20s linear infinite;
  }
  .animate-fade-up {
    animation: fade-up 0.8s ease-out both;
  }
</style>

<section
  class="relative min-h-screen overflow-hidden bg-[#1a1b26] pt-20 sm:pt-24"
>
  <div class="absolute inset-0">
    <div
      class="animate-orb-1 absolute left-10 top-10 h-48 w-48 rounded-full bg-gradient-to-br from-[#7aa2f7]/30 via-[#7aa2f7]/15 to-transparent blur-3xl sm:left-20 sm:top-20 sm:h-72 sm:w-72"
    >
    </div>
    <div
      class="via-[#bb9af7]/12 animate-orb-2 absolute bottom-10 right-10 h-64 w-64 rounded-full bg-gradient-to-br from-[#bb9af7]/25 to-transparent blur-3xl sm:bottom-20 sm:right-20 sm:h-96 sm:w-96"
    >
    </div>
    <div
      class="animate-orb-3 absolute right-1/4 top-1/3 h-32 w-32 rounded-full bg-gradient-to-br from-[#9ece6a]/20 via-[#9ece6a]/10 to-transparent blur-2xl sm:h-48 sm:w-48"
    >
    </div>
    <div
      class="via-[#f7768e]/8 animate-orb-4 absolute bottom-1/3 left-1/3 h-24 w-24 rounded-full bg-gradient-to-br from-[#f7768e]/15 to-transparent blur-2xl sm:h-24 sm:w-36"
    >
    </div>
  </div>

  <div
    class="absolute inset-0 opacity-[0.02]"
    style="background-image: radial-gradient(circle at 1px 1px, #7aa2f7 1px, transparent 0); background-size: 40px 40px;"
  >
  </div>

  <div
    class="absolute inset-0 z-10 bg-gradient-to-br from-[#1a1b26] via-[#1a1b26]/95 to-[#1a1b26]/90"
  >
  </div>

  <div
    class="relative z-10 mx-auto flex h-full w-full max-w-7xl items-center px-4 sm:px-6 lg:px-8"
  >
    <div
      class="grid w-full grid-cols-1 items-center gap-8 sm:gap-12 lg:grid-cols-2 lg:gap-20"
    >
      <div class="order-2 space-y-6 sm:space-y-8 lg:order-1">
        <div
          class="animate-fade-up inline-flex items-center gap-2 rounded-full border border-[#7aa2f7]/20 bg-[#7aa2f7]/10 px-3 py-2 sm:px-4"
          style="animation-delay: 0.0s;"
        >
          <div class="h-2 w-2 animate-pulse rounded-full bg-[#7aa2f7]"></div>
          <span class="text-xs font-medium text-[#7aa2f7] sm:text-sm"
            >Available for Projects</span
          >
        </div>

        <div class="space-y-3 sm:space-y-4">
          <h1
            class="text-4xl font-black leading-tight sm:text-5xl md:text-6xl lg:text-7xl"
          >
            <span
              class="animate-fade-up block text-[#c0caf5]"
              style="animation-delay: 0.2s;">Hey, I'm</span
            >
            <span
              class="animate-fade-up block bg-gradient-to-r from-[#7aa2f7] to-[#bb9af7] bg-clip-text text-transparent"
              style="animation-delay: 0.4s;">{name}</span
            >
          </h1>
          <p
            class="animate-fade-up max-w-2xl text-lg font-medium leading-relaxed text-[#a9b1d6] sm:text-xl md:text-2xl"
            style="animation-delay: 0.6s;"
          >
            <span class="text-[#7aa2f7]">{jobTitle}</span> crafting software through
            thoughtful design and engineering.
            <br />
            <br />
            I collaborate, lead, and build <span class="text-[#bb9af7]"
              >scalable
            </span>web & mobile systems that grow with users.
          </p>
        </div>

        <div
          class="animate-fade-up flex flex-wrap gap-6 sm:gap-8"
          style="animation-delay: 0.8s;"
        >
          <div class="text-center">
            <div class="text-xl font-bold text-[#7aa2f7] sm:text-2xl">
              {stats[0].value}
            </div>
            <div class="text-xs text-[#a9b1d6] sm:text-sm">
              {stats[0].label}
            </div>
          </div>
          <div class="text-center">
            <div class="text-xl font-bold text-[#7aa2f7] sm:text-2xl">
              {stats[1].value}
            </div>
            <div class="text-xs text-[#a9b1d6] sm:text-sm">
              {stats[1].label}
            </div>
          </div>
          <div class="text-center">
            <div class="text-xl font-bold text-[#7aa2f7] sm:text-2xl">
              {stats[2].value}
            </div>
            <div class="text-xs text-[#a9b1d6] sm:text-sm">
              {stats[2].label}
            </div>
          </div>
        </div>

        <div
