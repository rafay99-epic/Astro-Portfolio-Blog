---
import authorConfig from "@config/siteConfig/info.json";

const testimonials = authorConfig.testimonials;
---

<section class="relative px-4 py-16 sm:px-6 sm:py-20 lg:px-8">
  <div class="mx-auto max-w-7xl">
    <div class="mb-12 text-center sm:mb-16">
      <h2
        class="mb-4 text-3xl font-black text-[#c0caf5] sm:text-4xl lg:text-5xl"
      >
        Client
        <span
          class="bg-gradient-to-r from-[#7aa2f7] to-[#bb9af7] bg-clip-text text-transparent"
        >
          Testimonials
        </span>
      </h2>
      <p class="mx-auto max-w-2xl text-base text-[#a9b1d6] sm:text-lg">
        What my clients say about working with me and the results we've achieved
        together
      </p>
    </div>

    <div class="grid grid-cols-1 gap-4 sm:gap-6 lg:grid-cols-2 lg:gap-8">
      {
        testimonials.map((testimonial, index) => (
          <div
            class="group relative rounded-xl border border-[#414868]/30 p-4 transition-all duration-500 hover:-translate-y-2 hover:border-[#7aa2f7]/30 hover:shadow-2xl hover:shadow-[#7aa2f7]/10 sm:p-6 lg:p-8"
            style={`animation-delay: ${index * 0.15}s`}
          >
            <div class="absolute right-2 top-2 font-serif text-3xl text-[#7aa2f7]/20 sm:right-4 sm:top-4 sm:text-4xl">
              "
            </div>

            <div class="mb-3 flex gap-1 sm:mb-4">
              {Array.from({ length: testimonial.rating }, (_, _i) => (
                <svg
                  class="h-3 w-3 text-[#f7768e] sm:h-4 sm:w-4"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>

            <blockquote class="mb-4 line-clamp-4 text-sm italic leading-relaxed text-[#a9b1d6] sm:mb-6 sm:line-clamp-none sm:text-base">
              "{testimonial.testimonial}"
            </blockquote>

            <div class="mb-3 sm:mb-4">
              <div class="mb-2 text-xs font-medium text-[#7aa2f7] sm:text-sm">
                Project: {testimonial.project}
              </div>
              <div class="flex flex-wrap gap-1 sm:gap-1.5">
                {testimonial.technologies.slice(0, 2).map((tech: string) => (
                  <span class="rounded-md border border-[#414868]/30 px-2 py-1 text-xs text-[#a9b1d6]">
                    {tech}
                  </span>
                ))}
                {testimonial.technologies.length > 2 && (
                  <span class="rounded-md border border-[#7aa2f7]/30 px-2 py-1 text-xs text-[#7aa2f7]">
                    +{testimonial.technologies.length - 2}
                  </span>
                )}
              </div>
            </div>

            <div class="flex items-center gap-3 border-t border-[#414868]/30 pt-3 sm:gap-4 sm:pt-4">
              <div class="relative flex-shrink-0">
                <img
                  src={testimonial.avatar}
                  alt={testimonial.name}
                  class="h-10 w-10 rounded-full border-2 border-[#7aa2f7]/30 object-cover sm:h-12 sm:w-12"
                  loading="lazy"
                />
                <div class="absolute -bottom-1 -right-1 h-3 w-3 rounded-full border-2 border-[#1a1b26] bg-[#9ece6a] sm:h-4 sm:w-4" />
              </div>
              <div class="min-w-0 flex-1">
                <h4 class="truncate text-sm font-semibold text-[#c0caf5] transition-colors group-hover:text-[#7aa2f7] sm:text-base">
                  {testimonial.name}
                </h4>
                <p class="truncate text-xs text-[#a9b1d6] sm:text-sm">
                  {testimonial.position} at {testimonial.company}
                </p>
              </div>
            </div>

            <div class="from-[#7aa2f7]/3 to-[#bb9af7]/3 pointer-events-none absolute inset-0 rounded-xl bg-gradient-to-br opacity-0 transition-opacity duration-500 group-hover:opacity-100" />
          </div>
        ))
      }
    </div>

    <div class="mt-8 text-center sm:mt-12 lg:mt-16">
      <div
        class="mx-auto max-w-4xl rounded-2xl border border-[#414868]/30 p-6 sm:p-8 lg:p-12"
      >
        <h3
          class="mb-3 text-xl font-bold text-[#c0caf5] sm:mb-4 sm:text-2xl lg:text-3xl"
        >
          Ready to Join These
          <span
            class="bg-gradient-to-r from-[#7aa2f7] to-[#bb9af7] bg-clip-text text-transparent"
          >
            Success Stories?
          </span>
        </h3>
        <p
          class="mx-auto mb-6 max-w-2xl text-sm text-[#a9b1d6] sm:mb-8 sm:text-base"
        >
          Let's discuss your project and create something amazing together. I'm
          here to help bring your vision to life.
        </p>
        <div class="flex flex-col justify-center gap-3 sm:flex-row sm:gap-4">
          <a
            href="/contact-me"
            class="group inline-flex items-center justify-center gap-2 rounded-xl bg-gradient-to-r from-[#7aa2f7] to-[#bb9af7] px-6 py-3 text-sm font-semibold text-white transition-all duration-300 hover:shadow-lg hover:shadow-[#7aa2f7]/25 sm:px-8 sm:py-4 sm:text-base"
          >
            <span>Start Your Project</span>
            <svg
              class="h-4 w-4 transition-transform duration-300 group-hover:translate-x-1 sm:h-5 sm:w-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
          <a
            href="/project"
            class="inline-flex items-center justify-center gap-2 rounded-xl border border-[#7aa2f7] px-6 py-3 text-sm font-semibold text-[#7aa2f7] transition-all duration-300 hover:bg-[#7aa2f7] hover:text-white sm:px-8 sm:py-4 sm:text-base"
          >
            <span>View My Work</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .group {
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
    transform: translateY(30px);
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .group:nth-child(1) {
    animation-delay: 0.1s;
  }
  .group:nth-child(2) {
    animation-delay: 0.25s;
  }
  .group:nth-child(3) {
    animation-delay: 0.4s;
  }
  .group:nth-child(4) {
    animation-delay: 0.55s;
  }

  .line-clamp-4 {
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Mobile touch improvements */
  @media (max-width: 640px) {
    .group:hover {
      transform: none;
    }

    .group:active {
      transform: scale(0.98);
    }
  }

  /* Improved mobile spacing */
  @media (max-width: 480px) {
    .group {
      margin-bottom: 1rem;
    }
  }
</style>
