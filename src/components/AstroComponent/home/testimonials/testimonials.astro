---
import authorConfig from "@config/siteConfig/info.json";
const testimonials = authorConfig.testimonials;
---

<section class="relative py-16 sm:py-20 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-12 sm:mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-black text-[#c0caf5] mb-4">
        Client
        <span class="bg-gradient-to-r from-[#7aa2f7] to-[#bb9af7] bg-clip-text text-transparent">
          Testimonials
        </span>
      </h2>
      <p class="text-base sm:text-lg text-[#a9b1d6] max-w-2xl mx-auto">
        What my clients say about working with me and the results we've achieved together
      </p>
    </div>

    <!-- Testimonials Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 sm:gap-6 lg:gap-8">
      {testimonials.map((testimonial, index) => (
        <div 
          class="group relative border border-[#414868]/30 rounded-xl p-4 sm:p-6 lg:p-8 hover:border-[#7aa2f7]/30 hover:-translate-y-2 transition-all duration-500 hover:shadow-2xl hover:shadow-[#7aa2f7]/10"
          style={`animation-delay: ${index * 0.15}s`}
        >
          <!-- Quote Icon -->
          <div class="absolute top-2 right-2 sm:top-4 sm:right-4 text-[#7aa2f7]/20 text-3xl sm:text-4xl font-serif">
            "
          </div>

          <!-- Rating Stars -->
          <div class="flex gap-1 mb-3 sm:mb-4">
            {Array.from({ length: testimonial.rating }, (_, i) => (
              <svg class="w-3 h-3 sm:w-4 sm:h-4 text-[#f7768e]" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            ))}
          </div>

          <!-- Testimonial Text -->
          <blockquote class="text-sm sm:text-base text-[#a9b1d6] mb-4 sm:mb-6 leading-relaxed italic line-clamp-4 sm:line-clamp-none">
            "{testimonial.testimonial}"
          </blockquote>

          <!-- Project Info -->
          <div class="mb-3 sm:mb-4">
            <div class="text-xs sm:text-sm text-[#7aa2f7] font-medium mb-2">
              Project: {testimonial.project}
            </div>
            <div class="flex flex-wrap gap-1 sm:gap-1.5">
              {testimonial.technologies.slice(0, 2).map((tech) => (
                <span class="px-2 py-1 border border-[#414868]/30 rounded-md text-xs text-[#a9b1d6]">
                  {tech}
                </span>
              ))}
              {testimonial.technologies.length > 2 && (
                <span class="px-2 py-1 border border-[#7aa2f7]/30 rounded-md text-xs text-[#7aa2f7]">
                  +{testimonial.technologies.length - 2}
                </span>
              )}
            </div>
          </div>

          <!-- Client Info -->
          <div class="flex items-center gap-3 sm:gap-4 pt-3 sm:pt-4 border-t border-[#414868]/30">
            <div class="relative flex-shrink-0">
              <img 
                src={testimonial.avatar} 
                alt={testimonial.name}
                class="w-10 h-10 sm:w-12 sm:h-12 rounded-full object-cover border-2 border-[#7aa2f7]/30"
                loading="lazy"
              />
              <div class="absolute -bottom-1 -right-1 w-3 h-3 sm:w-4 sm:h-4 bg-[#9ece6a] rounded-full border-2 border-[#1a1b26]"></div>
            </div>
            <div class="min-w-0 flex-1">
              <h4 class="text-sm sm:text-base font-semibold text-[#c0caf5] group-hover:text-[#7aa2f7] transition-colors truncate">
                {testimonial.name}
              </h4>
              <p class="text-xs sm:text-sm text-[#a9b1d6] truncate">
                {testimonial.position} at {testimonial.company}
              </p>
            </div>
          </div>

          <!-- Hover Effect -->
          <div class="absolute inset-0 bg-gradient-to-br from-[#7aa2f7]/3 to-[#bb9af7]/3 rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>
        </div>
      ))}
    </div>

    <!-- CTA Section -->
    <div class="text-center mt-8 sm:mt-12 lg:mt-16">
      <div class="border border-[#414868]/30 rounded-2xl p-6 sm:p-8 lg:p-12 max-w-4xl mx-auto">
        <h3 class="text-xl sm:text-2xl lg:text-3xl font-bold text-[#c0caf5] mb-3 sm:mb-4">
          Ready to Join These
          <span class="bg-gradient-to-r from-[#7aa2f7] to-[#bb9af7] bg-clip-text text-transparent">
            Success Stories?
          </span>
        </h3>
        <p class="text-sm sm:text-base text-[#a9b1d6] mb-6 sm:mb-8 max-w-2xl mx-auto">
          Let's discuss your project and create something amazing together. I'm here to help bring your vision to life.
        </p>
        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center">
          <a 
            href="/contact-me" 
            class="inline-flex items-center justify-center gap-2 px-6 py-3 sm:px-8 sm:py-4 bg-gradient-to-r from-[#7aa2f7] to-[#bb9af7] text-white font-semibold rounded-xl hover:shadow-lg hover:shadow-[#7aa2f7]/25 transition-all duration-300 group text-sm sm:text-base"
          >
            <span>Start Your Project</span>
            <svg class="w-4 h-4 sm:w-5 sm:h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
          <a 
            href="/project" 
            class="inline-flex items-center justify-center gap-2 px-6 py-3 sm:px-8 sm:py-4 border border-[#7aa2f7] text-[#7aa2f7] font-semibold rounded-xl hover:bg-[#7aa2f7] hover:text-white transition-all duration-300 text-sm sm:text-base"
          >
            <span>View My Work</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .group {
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
    transform: translateY(30px);
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .group:nth-child(1) { animation-delay: 0.1s; }
  .group:nth-child(2) { animation-delay: 0.25s; }
  .group:nth-child(3) { animation-delay: 0.4s; }
  .group:nth-child(4) { animation-delay: 0.55s; }

  .line-clamp-4 {
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Mobile touch improvements */
  @media (max-width: 640px) {
    .group:hover {
      transform: none;
    }
    
    .group:active {
      transform: scale(0.98);
    }
  }

  /* Improved mobile spacing */
  @media (max-width: 480px) {
    .group {
      margin-bottom: 1rem;
    }
  }
</style>