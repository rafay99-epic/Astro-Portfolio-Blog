---
import authorConfig from "@config/siteConfig/info.json";

const testimonials = authorConfig.testimonials;
---

<section class="relative bg-[#1a1b26] px-4 py-14 sm:px-8 sm:py-20 lg:px-12">
  <div class="mx-auto max-w-6xl">
    <!-- Section header -->
    <div class="mb-8 text-center sm:mb-10">
      <p class="mb-3 text-xs font-semibold uppercase tracking-[0.2em] text-[#7aa2f7]">
        Testimonials
      </p>
      <h2
        style="font-size: clamp(1.875rem, 3.5vw, 3rem); line-height: 1.2;"
        class="mb-4 font-bold text-[#c0caf5]"
      >
        Client
        <span class="bg-gradient-to-r from-[#7aa2f7] to-[#bb9af7] bg-clip-text text-transparent">
          Testimonials
        </span>
      </h2>
      <p class="mx-auto max-w-lg text-[#a9b1d6]" style="font-size: clamp(0.875rem, 1.2vw, 1.125rem);">
        What my clients say about working with me and the results we've achieved together
      </p>
    </div>

    <!-- Testimonial grid -->
    <div class="grid grid-cols-1 gap-4 sm:gap-5 lg:grid-cols-2 lg:gap-6">
      {
        testimonials.map((testimonial, _index) => (
          <div class="testimonial-card relative rounded-2xl border border-[#414868]/20 bg-[#24283b]/30 p-5 transition-all duration-300 hover:border-[#414868]/40 hover:bg-[#24283b]/50 sm:p-7">
            <!-- Top: rating + quote -->
            <div class="mb-5 flex items-start justify-between">
              <div class="flex gap-0.5">
                {Array.from({ length: testimonial.rating }, (_, _i) => (
                  <svg class="h-3.5 w-3.5 text-[#e0af68]" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
              <svg class="h-8 w-8 text-[#7aa2f7]/10" viewBox="0 0 24 24" fill="currentColor">
                <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
              </svg>
            </div>

            <!-- Quote text -->
            <blockquote class="mb-6 text-sm leading-relaxed text-[#a9b1d6] sm:text-[0.9375rem]">
              "{testimonial.testimonial}"
            </blockquote>

            <!-- Project info -->
            <div class="mb-5">
              <p class="mb-2 text-xs font-medium text-[#565f89]">
                Project: <span class="text-[#7aa2f7]">{testimonial.project}</span>
              </p>
              <div class="flex flex-wrap gap-1.5">
                {testimonial.technologies.slice(0, 3).map((tech: string) => (
                  <span class="rounded-full bg-[#1a1b26]/50 px-2.5 py-1 text-xs text-[#565f89]">
                    {tech}
                  </span>
                ))}
                {testimonial.technologies.length > 3 && (
                  <span class="rounded-full bg-[#7aa2f7]/10 px-2.5 py-1 text-xs text-[#7aa2f7]">
                    +{testimonial.technologies.length - 3}
                  </span>
                )}
              </div>
            </div>

            <!-- Author -->
            <div class="flex items-center gap-3 border-t border-[#414868]/20 pt-5">
              <div class="relative flex-shrink-0">
                <img
                  src={testimonial.avatar}
                  alt={testimonial.name}
                  class="h-10 w-10 rounded-full object-cover ring-2 ring-[#414868]/30"
                  loading="lazy"
                />
                <div class="absolute -bottom-0.5 -right-0.5 h-3 w-3 rounded-full border-2 border-[#24283b] bg-[#9ece6a]" />
              </div>
              <div class="min-w-0 flex-1">
                <h4 class="truncate text-sm font-semibold text-[#c0caf5]">
                  {testimonial.name}
                </h4>
                <p class="truncate text-xs text-[#565f89]">
                  {testimonial.position} at {testimonial.company}
                </p>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <!-- CTA section -->
    <div class="mt-8 text-center sm:mt-10">
      <div class="mx-auto max-w-2xl rounded-2xl border border-[#414868]/20 bg-[#24283b]/20 p-6 sm:p-10">
        <h3
          style="font-size: clamp(1.25rem, 2vw, 1.75rem); line-height: 1.3;"
          class="mb-3 font-bold text-[#c0caf5]"
        >
          Ready to Join These
          <span class="bg-gradient-to-r from-[#7aa2f7] to-[#bb9af7] bg-clip-text text-transparent">
            Success Stories?
          </span>
        </h3>
        <p class="mx-auto mb-8 max-w-lg text-sm text-[#565f89]">
          Let's discuss your project and create something amazing together.
        </p>
        <div class="flex flex-col justify-center gap-3 sm:flex-row">
          <a
            href="/contact-me"
            class="group inline-flex items-center justify-center gap-2 rounded-full bg-gradient-to-r from-[#7aa2f7] to-[#bb9af7] px-7 py-3 text-sm font-semibold text-white shadow-lg shadow-[#7aa2f7]/20 transition-all duration-300 hover:shadow-xl hover:shadow-[#7aa2f7]/30"
          >
            <span>Start Your Project</span>
            <svg
              class="h-4 w-4 transition-transform duration-300 group-hover:translate-x-1"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
          <a
            href="/project"
            class="inline-flex items-center justify-center gap-2 rounded-full border border-[#414868]/40 px-7 py-3 text-sm font-semibold text-[#a9b1d6] transition-all duration-300 hover:border-[#7aa2f7]/30 hover:text-[#c0caf5]"
          >
            <span>View My Work</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
