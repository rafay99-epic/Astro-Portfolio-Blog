<script lang="js" is:inline>
  const form = document.getElementById("form");
  const result = document.getElementById("result");

  form.addEventListener("submit", function (e) {
    e.preventDefault();

    const formData = new FormData(form);
    const object = Object.fromEntries(formData);
    const json = JSON.stringify(object);

    result.className = "block bg-[#7aa2f7]/20 border border-[#7aa2f7]/30 text-[#c0caf5] text-center p-4 rounded-xl font-medium";
    result.innerHTML = "Sending your message...";

    fetch("https://api.web3forms.com/submit", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
        Accept: "application/json",
      },
      body: json,
    })
      .then(async (response) => {
        let json = await response.json();
        if (response.status == 200) {
          result.className = "block bg-green-500/20 border border-green-500/30 text-green-400 text-center p-4 rounded-xl font-medium";
          result.innerHTML = "✅ " + json.message;
        } else {
          result.className = "block bg-red-500/20 border border-red-500/30 text-red-400 text-center p-4 rounded-xl font-medium";
          result.innerHTML = "❌ " + json.message;
        }
      })
      .catch((error) => {
        console.error(error);
        result.className = "block bg-red-500/20 border border-red-500/30 text-red-400 text-center p-4 rounded-xl font-medium";
        result.innerHTML = "❌ Something went wrong! Please try again.";
      })
      .then(() => {
        form.reset();
        setTimeout(() => {
          result.classList.add("opacity-0", "transition-opacity", "duration-500");
          setTimeout(() => {
            result.classList.add("hidden");
            result.classList.remove("opacity-0");
          }, 500);
        }, 4000);
      });
  });
</script>

