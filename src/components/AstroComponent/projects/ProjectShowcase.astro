---
import type { CollectionEntry } from "astro:content";

type ProjectEntry = CollectionEntry<"projects">;

interface Props {
	projects: ProjectEntry[];
	title?: string;
	subtitle?: string;
	eyebrow?: string;
	showViewAll?: boolean;
	viewAllHref?: string;
	viewAllLabel?: string;
}

const {
	projects,
	title = "Selected Work",
	subtitle = "A curated selection of projects where product thinking meets sharp execution.",
	eyebrow = "Projects",
	showViewAll = false,
	viewAllHref = "/project",
	viewAllLabel = "View All Projects",
} = Astro.props as Props;

const uniqueTech = new Set<string>();
const uniqueCategories = new Set<string>();

projects.forEach((project) => {
	project.data.ProjectTech?.forEach((tech: string) => {
		uniqueTech.add(tech);
	});
	project.data.ProjectCategory?.forEach((category: string) => {
		uniqueCategories.add(category);
	});
});

const stats = [
	{ label: "Projects", value: projects.length },
	{ label: "Stacks", value: uniqueTech.size },
	{ label: "Categories", value: uniqueCategories.size },
];
---

<section class="project-showcase">
  <div class="project-inner">
    <header class="project-header">
      <div class="project-heading">
        <span class="project-eyebrow">{eyebrow}</span>
        <h2 class="project-title">{title}</h2>
        <p class="project-subtitle">{subtitle}</p>
      </div>
      <div class="project-stats">
        {
          stats.map((stat) => (
            <div class="project-stat">
              <span class="project-stat__value">{stat.value}</span>
              <span class="project-stat__label">{stat.label}</span>
            </div>
          ))
        }
      </div>
    </header>

    <div class="project-grid">
      {
        projects.map((project, index) => {
          const category = project.data.ProjectCategory?.[0];
          const techList = project.data.ProjectTech ?? [];
          const techPreview = techList.slice(0, 4);
          const extraTech = techList.length - techPreview.length;

          return (
            <article class="project-tile" style={`--delay: ${index * 80}ms`}>
              <div class="project-card">
                <div class="project-media">
                  {project.data.ProjectImage ? (
                    <img
                      src={project.data.ProjectImage}
                      alt={project.data.Projecttitle}
                      loading="lazy"
                    />
                  ) : (
                    <div class="project-placeholder">Project Preview</div>
                  )}
                  <div class="project-media__overlay" />
                  <div class="project-badges">
                    {category && <span class="project-badge">{category}</span>}
                    {project.data.ProjectRanking && (
                      <span class="project-badge project-badge--rank">
                        Rank #{project.data.ProjectRanking}
                      </span>
                    )}
                  </div>
                </div>

                <div class="project-body">
                  <div class="project-copy">
                    <h3 class="project-name">{project.data.Projecttitle}</h3>
                    <p class="project-summary">
                      {project.data.ProjectDescription}
                    </p>
                  </div>

                  {techPreview.length > 0 && (
                    <div class="project-tech">
                      {techPreview.map((tech: string) => (
                        <span class="project-tech__chip">{tech}</span>
                      ))}
                      {extraTech > 0 && (
                        <span class="project-tech__chip project-tech__chip--more">
                          +{extraTech} more
                        </span>
                      )}
                    </div>
                  )}

                  <div class="project-actions">
                    <a
                      href={`/project/${project.slug}`}
                      class="project-action__primary"
                    >
                      View Case Study
                      <svg
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        aria-hidden="true"
                      >
                        <path d="M5 12h14" />
                        <path d="m12 5 7 7-7 7" />
                      </svg>
                    </a>

                    <div class="project-action__links">
                      {project.data.ProjectDeployedLink && (
                        <a
                          href={project.data.ProjectDeployedLink}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="project-action__icon"
                          aria-label={`Open ${project.data.Projecttitle} live demo`}
                        >
                          <svg
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            aria-hidden="true"
                          >
                            <path d="M7 17 17 7" />
                            <path d="M8 7h9v9" />
                          </svg>
                          <span>Live</span>
                        </a>
                      )}
                      {project.data.ProjectGithubLink && (
                        <a
                          href={project.data.ProjectGithubLink}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="project-action__icon"
                          aria-label={`Open ${project.data.Projecttitle} source code`}
                        >
                          <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                          </svg>
                          <span>Code</span>
                        </a>
                      )}
                    </div>
                  </div>
                </div>
              </div>
            </article>
          );
        })
      }
    </div>

    {
      showViewAll && (
        <div class="project-cta">
          <a href={viewAllHref} class="project-cta__link">
            {viewAllLabel}
            <svg
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              aria-hidden="true"
            >
              <path d="M5 12h14" />
              <path d="m12 5 7 7-7 7" />
            </svg>
          </a>
        </div>
      )
    }
  </div>
</section>

<style>
  .project-showcase {
    position: relative;
    padding: clamp(3.5rem, 5vw, 5rem) 1rem;
    background: var(--color-bg-primary);
  }

  @media (min-width: 640px) {
    .project-showcase {
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }
  }

  .project-inner {
    max-width: 1180px;
    margin: 0 auto;
  }

  .project-header {
    display: grid;
    gap: 1.5rem;
    margin-bottom: clamp(2rem, 4vw, 3rem);
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--color-border-secondary);
  }

  .project-heading {
    display: grid;
    gap: 0.6rem;
  }

  .project-eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.32em;
    font-size: 0.7rem;
    font-weight: 600;
    color: var(--color-text-muted);
  }

  .project-title {
    font-size: clamp(2rem, 3.2vw, 3.2rem);
    line-height: 1.1;
    font-weight: 700;
    margin: 0;
    color: var(--color-text-primary);
  }

  .project-subtitle {
    margin: 0;
    max-width: 42rem;
    font-size: clamp(1rem, 1.5vw, 1.15rem);
    color: var(--color-text-secondary);
  }

  .project-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
  }

  .project-stat {
    padding: 1rem 1.25rem;
    border-radius: 12px;
    border: 1px solid var(--color-border-secondary);
    background: var(--color-bg-secondary);
  }

  .project-stat__value {
    display: block;
    font-size: 1.4rem;
    font-weight: 700;
    color: var(--color-text-primary);
  }

  .project-stat__label {
    display: block;
    margin-top: 0.25rem;
    font-size: 0.7rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-text-muted);
  }

  .project-grid {
    display: grid;
    gap: clamp(1.25rem, 2vw, 2rem);
  }

  .project-tile {
    animation: tileRise 0.7s ease forwards;
    opacity: 0;
    transform: translateY(24px);
    animation-delay: var(--delay);
  }

  .project-card {
    height: 100%;
    display: flex;
    flex-direction: column;
    background: var(--color-bg-secondary);
    border-radius: 18px;
    border: 1px solid var(--color-border-secondary);
    overflow: hidden;
    transition:
      transform 0.35s ease,
      box-shadow 0.35s ease,
      border-color 0.35s ease;
  }

  .project-card:hover {
    transform: translateY(-4px);
    border-color: var(--color-border-hover);
    box-shadow: 0 22px 44px rgba(10, 12, 20, 0.35);
  }

  .project-card:hover .project-media img {
    transform: scale(1.03);
  }

  .project-media {
    position: relative;
    aspect-ratio: 16 / 10;
    overflow: hidden;
    background: var(--color-bg-tertiary);
  }

  .project-media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .project-placeholder {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.65rem;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: var(--color-text-muted);
    background: var(--color-bg-tertiary);
  }

  .project-media__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      rgba(26, 27, 38, 0),
      rgba(26, 27, 38, 0.6)
    );
  }

  .project-badges {
    position: absolute;
    top: 1rem;
    left: 1rem;
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    z-index: 2;
  }

  .project-badge {
    font-size: 0.7rem;
    padding: 0.35rem 0.6rem;
    border-radius: 999px;
    background: rgba(26, 27, 38, 0.85);
    border: 1px solid var(--color-border-secondary);
    color: var(--color-text-accent);
  }

  .project-badge--rank {
    border-color: rgba(187, 154, 247, 0.4);
    color: var(--color-secondary);
  }

  .project-body {
    padding: 1.6rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .project-copy {
    display: grid;
    gap: 0.35rem;
  }

  .project-name {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0;
    color: var(--color-text-primary);
  }

  .project-summary {
    margin: 0;
    color: var(--color-text-secondary);
    font-size: 0.95rem;
    line-height: 1.55;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .project-tech__chip {
    padding: 0.35rem 0.7rem;
    font-size: 0.7rem;
    border-radius: 999px;
    border: 1px solid var(--color-border-secondary);
    background: rgba(26, 27, 38, 0.7);
    color: var(--color-text-secondary);
  }

  .project-tech__chip--more {
    border-color: var(--color-border-hover);
    color: var(--color-text-accent);
    background: rgba(122, 162, 247, 0.12);
  }

  .project-actions {
    margin-top: auto;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: 0.75rem;
  }

  .project-action__primary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.65rem 1.2rem;
    border-radius: 999px;
    background: var(--color-primary);
    color: #ffffff;
    font-weight: 600;
    font-size: 0.85rem;
    text-decoration: none;
    box-shadow: 0 10px 22px rgba(122, 162, 247, 0.25);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease,
      filter 0.3s ease;
  }

  .project-action__primary:hover {
    transform: translateY(-1px);
    filter: brightness(1.05);
    box-shadow: 0 16px 28px rgba(122, 162, 247, 0.35);
  }

  .project-action__primary svg {
    width: 16px;
    height: 16px;
  }

  .project-action__links {
    display: flex;
    gap: 0.5rem;
  }

  .project-action__icon {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.5rem 0.75rem;
    border-radius: 999px;
    border: 1px solid var(--color-border-secondary);
    background: transparent;
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: 0.75rem;
    transition:
      border-color 0.3s ease,
      color 0.3s ease,
      background 0.3s ease;
  }

  .project-action__icon svg {
    width: 14px;
    height: 14px;
  }

  .project-action__icon:hover {
    border-color: var(--color-border-hover);
    color: var(--color-text-primary);
    background: rgba(122, 162, 247, 0.12);
  }

  .project-cta {
    margin-top: clamp(2rem, 4vw, 3rem);
    display: flex;
    justify-content: center;
  }

  .project-cta__link {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.85rem 1.6rem;
    border-radius: 999px;
    border: 1px solid var(--color-border-hover);
    background: rgba(122, 162, 247, 0.12);
    color: var(--color-text-primary);
    font-weight: 600;
    text-decoration: none;
    transition:
      transform 0.3s ease,
      background 0.3s ease,
      color 0.3s ease;
  }

  .project-cta__link:hover {
    transform: translateY(-1px);
    background: var(--color-primary);
    color: #ffffff;
  }

  .project-cta__link svg {
    width: 18px;
    height: 18px;
  }

  @media (min-width: 720px) {
    .project-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (min-width: 960px) {
    .project-header {
      grid-template-columns: 1.2fr 0.8fr;
      align-items: end;
    }
  }

  @media (min-width: 1100px) {
    .project-grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }

  @media (max-width: 720px) {
    .project-actions {
      flex-direction: column;
      align-items: flex-start;
    }

    .project-action__links {
      width: 100%;
      flex-wrap: wrap;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .project-tile {
      animation: none;
      opacity: 1;
      transform: none;
    }

    .project-card,
    .project-card:hover {
      transform: none;
    }
  }

  @keyframes tileRise {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
