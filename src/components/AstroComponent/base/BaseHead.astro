---
import "@styles/global.css";
import "@styles/theme.css";
interface Props {
  title: string;
  description: string;
  image?: string;
  keywords?: string[];
}
import { SEOMetadata } from "astro-seo-metadata";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const { title, description, image = "/Rafay99.webp", keywords } = Astro.props;

declare global {
  interface Window {
    adsbygoogle: any[];
  }
}
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.webp" />
<meta name="generator" content={Astro.generator} />

<link
  rel="preload"
  href="/fonts/Poppins/Poppins-Black.ttf"
  as="font"
  type="font/ttf"
  crossorigin="anonymous"
/>

<link
  rel="preload"
  href="/fonts/Poppins/Poppins-ExtraLightItalic.ttf"
  as="font"
  type="font/ttf"
  crossorigin="anonymous"
/>
<link
  rel="preload"
  href="/fonts/Poppins/Poppins-Medium.ttf"
  as="font"
  type="font/ttf"
  crossorigin="anonymous"
/>

<link
  rel="preload"
  href="/fonts/Poppins/Poppins-Regular.ttf"
  as="font"
  type="font/ttf"
  crossorigin="anonymous"
/>

<link rel="canonical" href={canonicalURL} />

<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
{
  keywords && keywords.length > 0 && (
    <meta name="keywords" content={keywords.join(", ")} />
  )
}

<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />

<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, Astro.url)} />

<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />

<meta name="description" content={description} />
<meta name="image" content={new URL(image, Astro.url)} />

<meta
  name="google-site-verification"
  content="2VQD6NfW5UaStcErGXyVQjGAtsQh_7hztSuKS-lIKkw"
/>

<meta
  name="google-site-verification"
  content="yhlSscdVZmq_TymJP_qeDvw2R1HWYzPTQOoCTiA6jgA"
/>

<SEOMetadata
  siteName="Rafay99"
  title={title}
  description={description}
  image={new URL(image, Astro.url).toString()}
  favicon="/favicon.webp"
  author="Abdul Rafay"
  copyright="Â© Abdul Rafay"
  astroSitemap={true}
  canonicalUrl={canonicalURL.toString()}
  type="website"
  astroGenerator={true}
/>

<script
  is:inline
  defer
  src="https://cloud.umami.is/script.js"
  data-website-id="a0bf9842-31b3-4e49-a961-cc27e2ab6920"></script>

<meta name="author" content={Astro.site} />

<meta name="copyright" content="ISC" />

<link
  rel="alternate"
  type="application/rss+xml"
  title={title}
  href={`${Astro.site}rss.xml`}
/>

<link rel="sitemap" href="/sitemap-index.xml" />

<!-- Google AdSense -->
<script
  is:inline
  async
  type="text/plain"
  data-category="ads"
  src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-2480387803052595"
  crossorigin="anonymous"></script>

<!-- Google tag (gtag.js) -->
<script
  is:inline
  async
  type="text/plain"
  data-category="ads"
  src="https://www.googletagmanager.com/gtag/js?id=AW-17413331660"></script>
<script is:inline type="text/plain" data-category="ads">
  window.dataLayer = window.dataLayer || [];
  function gtag() {
    dataLayer.push(arguments);
  }
  gtag("js", new Date());

  gtag("config", "AW-17413331660");
</script>

<script is:inline id="mcjs">
  !(function (c, h, i, m, p) {
    ((m = c.createElement(h)),
      (p = c.getElementsByTagName(h)[0]),
      (m.async = 1),
      (m.src = i),
      p.parentNode.insertBefore(m, p));
