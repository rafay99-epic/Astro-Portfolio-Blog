    document,
    "script",
    "https://chimpstatic.com/mcjs-connected/js/users/7316a11f3072ef061881d3279/8a20bb2ae5d1ecc66bfff068a.js",
  );
</script>

<!-- Cookie consent: default styles + Tokyo Night theme -->
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/gh/orestbida/cookieconsent@3.1.0/dist/cookieconsent.css"
/>
<link rel="stylesheet" href="/css/cookieconsent-theme.css" />
<script is:inline>
  document.documentElement.classList.add("cc--darkmode");
</script>
<script is:inline type="module" src="/js/cookieconsent-config.js"></script>

