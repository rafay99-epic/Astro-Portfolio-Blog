---
interface Props {
	href: string;
	icon?: astroHTML.JSX.Element | (() => astroHTML.JSX.Element);
	className?: string;
	"aria-label"?: string;
	target?: string;
	rel?: string;
	mobile?: boolean;
}

const {
	href,
	icon: Icon,
	className = "",
	mobile = false,
	...rest
} = Astro.props;
const hasLabel = Astro.slots.has("default");
---

{
	mobile ? (
		<a
			href={href}
			class:list={[
				"flex items-center gap-3 rounded-lg px-3 py-2.5 text-[#a9b1d6] transition-colors duration-150 hover:bg-[#24283b]/40 hover:text-[#c0caf5]",
				className,
			]}
			{...rest}
		>
			{Icon && (
				<span class="text-[#565f89]">
					<Icon class="h-4 w-4" />
				</span>
			)}
			{hasLabel && (
				<span class="text-sm">
					<slot />
				</span>
			)}
		</a>
	) : hasLabel ? (
		<a
			href={href}
			class:list={[
				"flex h-8 items-center px-3 text-[13px] text-[#565f89] transition-colors duration-150 hover:text-[#c0caf5]",
				className,
			]}
			{...rest}
		>
			<slot />
		</a>
	) : (
		<a
			href={href}
			class:list={[
				"flex h-8 w-8 items-center justify-center rounded-md text-[#414868] transition-colors duration-150 hover:text-[#a9b1d6]",
				className,
			]}
			{...rest}
		>
			{Icon && <Icon class="h-4 w-4" />}
		</a>
	)
}
