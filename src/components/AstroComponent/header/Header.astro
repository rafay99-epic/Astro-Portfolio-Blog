---
// Header.astro
import { featureFlags } from "../../../config/featureFlag/featureFlag.json";
import authorConfig from "../../../config/siteConfig/info.json";
---

<header
    id="main-header"
    class="fixed top-0 left-0 right-0 z-50 backdrop-blur-xl bg-[#1a1b26]/90 opacity-0 translate-y-[-100px] transition-all duration-400 ease-out"
>
    <div class="container mx-auto px-4 sm:px-6">
        <div class="flex justify-between items-center py-4">
            <!-- Logo -->
            <a
                href="/"
                class="flex items-center group transition-transform duration-200 ease-out hover:scale-[1.02] active:scale-[0.98]"
            >
                <div class="relative">
                    <img
                        src={authorConfig.avator}
                        alt="Author Avatar"
                        class="w-10 h-10 sm:w-12 sm:h-12 rounded-full border-2 border-[#7aa2f7]/30 group-hover:border-[#7aa2f7] transition-all duration-300 group-hover:rotate-[2deg]"
                    />
                    <div
                        class="absolute inset-0 rounded-full bg-gradient-to-r from-[#7aa2f7]/20 to-[#bb9af7]/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300 blur-sm"
                    >
                    </div>
                </div>
                <div class="ml-3 hidden sm:block">
                    <h1
                        class="text-lg font-bold bg-gradient-to-r from-[#c0caf5] to-[#a9b1d6] bg-clip-text text-transparent group-hover:scale-[1.01] transition-transform duration-200 ease-out"
                    >
                        {authorConfig.SiteName}
                    </h1>
                    <p class="text-xs text-[#a9b1d6]">Developer & Creator</p>
                </div>
            </a>

            <!-- Desktop Navigation -->
            <nav class="hidden lg:flex items-center space-x-2">
                {
                    featureFlags.showBlog && (
                        <a
                            href="/blog"
                            class="group flex items-center text-[#c0caf5] hover:text-[#7aa2f7] px-3 py-2 rounded-lg hover:bg-[#24283b]/50 transition-all duration-300 hover:scale-[1.01] active:scale-[0.99]"
                        >
                            <svg
                                class="w-4 h-4 mr-3 text-[#7aa2f7] group-hover:text-[#bb9af7] transition-colors duration-300"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                                />
                            </svg>
                            <span class="font-medium text-sm">Articles</span>
                        </a>
                    )
                }

                {
                    featureFlags.showNewsletter && (
                        <a
                            href="/newsletter-subscribe"
                            class="group flex items-center text-[#c0caf5] hover:text-[#7aa2f7] px-3 py-2 rounded-lg hover:bg-[#24283b]/50 transition-all duration-300 hover:scale-[1.01] active:scale-[0.99]"
                        >
                            <svg
                                class="w-4 h-4 mr-3 text-[#7aa2f7] group-hover:text-[#bb9af7] transition-colors duration-300"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                />
                            </svg>
                            <span class="font-medium text-sm">Newsletter</span>
                        </a>
                    )
                }

                {
                    featureFlags.showAbout && (
                        <a
                            href="/about"
                            class="group flex items-center text-[#c0caf5] hover:text-[#7aa2f7] px-3 py-2 rounded-lg hover:bg-[#24283b]/50 transition-all duration-300 hover:scale-[1.01] active:scale-[0.99]"
                        >
                            <svg
                                class="w-4 h-4 mr-3 text-[#7aa2f7] group-hover:text-[#bb9af7] transition-colors duration-300"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                                />
                            </svg>
                            <span class="font-medium text-sm">About</span>
                        </a>
                    )
                }

                {
                    featureFlags.showExperience && (
                        <a
                            href="/experience"
                            class="group flex items-center text-[#c0caf5] hover:text-[#7aa2f7] px-3 py-2 rounded-lg hover:bg-[#24283b]/50 transition-all duration-300 hover:scale-[1.01] active:scale-[0.99]"
                        >
                            <svg
                                class="w-4 h-4 mr-3 text-[#7aa2f7] group-hover:text-[#bb9af7] transition-colors duration-300"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0H8m8 0v2a2 2 0 002 2h2a2 2 0 002-2V8a2 2 0 00-2-2h-2zm-8 0V8a2 2 0 00-2 2H4a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2z"
                                />
                            </svg>
                            <span class="font-medium text-sm">Experience</span>
                        </a>
                    )
                }

                {
                    featureFlags.showProjects && (
                        <a
                            href="/project"
                            class="group flex items-center text-[#c0caf5] hover:text-[#7aa2f7] px-3 py-2 rounded-lg hover:bg-[#24283b]/50 transition-all duration-300 hover:scale-[1.01] active:scale-[0.99]"
                        >
                            <svg
                                class="w-4 h-4 mr-3 text-[#7aa2f7] group-hover:text-[#bb9af7] transition-colors duration-300"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M13 10V3L4 14h7v7l9-11h-7z"
                                />
                            </svg>
                            <span class="font-medium text-sm">Projects</span>
                        </a>
                    )
                }

                {
                    featureFlags.showTags && (
                        <a
                            href="/tag"
                            class="group flex items-center text-[#c0caf5] hover:text-[#7aa2f7] px-3 py-2 rounded-lg hover:bg-[#24283b]/50 transition-all duration-300 hover:scale-[1.01] active:scale-[0.99]"
                        >
                            <svg
                                class="w-4 h-4 text-[#7aa2f7] group-hover:text-[#bb9af7] transition-colors duration-300"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"
                                />
                            </svg>
                        </a>
                    )
                }

                {
                    featureFlags.showSearch && (
                        <a
                            href="/search"
                            class="group flex items-center text-[#c0caf5] hover:text-[#7aa2f7] px-3 py-2 rounded-lg hover:bg-[#24283b]/50 transition-all duration-300 hover:scale-[1.01] active:scale-[0.99]"
                        >
                            <svg
                                class="w-4 h-4 text-[#7aa2f7] group-hover:text-[#bb9af7] transition-colors duration-300"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                                />
                            </svg>
                        </a>
                    )
                }

                <!-- More Dropdown -->
                <div class="relative" id="dropdown-container">
                    <button
                        id="dropdown-toggle"
                        class="flex items-center text-[#c0caf5] hover:text-[#7aa2f7] transition-colors duration-300 px-3 py-2 rounded-lg hover:bg-[#24283b]/50 hover:scale-[1.01] active:scale-[0.99]"
                        aria-expanded="false"
                    >
                        <svg
                            class="w-4 h-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z"
                            ></path>
                        </svg>
                        <svg
                            id="dropdown-chevron"
                            class="w-3 h-3 ml-1 transition-transform duration-300"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </button>

                    <div
                        id="dropdown-menu"
                        class="absolute right-0 mt-2 w-56 backdrop-blur-xl bg-[#24283b]/95 border border-[#565f89]/30 rounded-xl shadow-2xl py-2 z-50 opacity-0 scale-95 -translate-y-2 pointer-events-none transition-all duration-200 ease-out"
                    >
                        <div class="px-2 space-y-1">
                            {
                                featureFlags.showNewsletter && (
                                    <a
                                        href="/newsletter"
                                        class="flex items-center gap-3 py-2 px-3 text-[#c0caf5] hover:text-[#7aa2f7] hover:bg-[#1a1b26]/60 rounded-lg transition-all duration-300 group hover:translate-x-1"
                                    >
                                        <svg
                                            class="w-4 h-4 text-[#7aa2f7]"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"
                                            />
                                        </svg>
                                        <span class="font-medium">
                                            Newsletter Archive
                                        </span>
                                        <svg
                                            class="ml-auto w-3 h-3 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                            />
                                        </svg>
                                    </a>
                                )
                            }

                            {
                                featureFlags.showTrendingPosts && (
                                    <a
                                        href="/trending"
                                        class="flex items-center gap-3 py-2 px-3 text-[#c0caf5] hover:text-[#7aa2f7] hover:bg-[#1a1b26]/60 rounded-lg transition-all duration-300 group hover:translate-x-1"
                                    >
                                        <svg
                                            class="w-4 h-4 text-[#f7768e]"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"
                                            />
                                        </svg>
                                        <span class="font-medium">
                                            Trending Articles
                                        </span>
                                        <svg
                                            class="ml-auto w-3 h-3 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                            />
                                        </svg>
                                    </a>
                                )
                            }

                            {
                                featureFlags.showNotes && (
                                    <a
                                        href="/ms_notes"
                                        class="flex items-center gap-3 py-2 px-3 text-[#c0caf5] hover:text-[#7aa2f7] hover:bg-[#1a1b26]/60 rounded-lg transition-all duration-300 group hover:translate-x-1"
                                    >
                                        <svg
                                            class="w-4 h-4 text-[#e0af68]"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                                            />
                                        </svg>
                                        <span class="font-medium">
                                            MS Notes
                                        </span>
                                        <svg
                                            class="ml-auto w-3 h-3 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                            />
                                        </svg>
                                    </a>
                                )
                            }

                            {
                                featureFlags.showWiki && (
                                    <a
                                        href="https://rafay99-docs.vercel.app/"
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="flex items-center gap-3 py-2 px-3 text-[#c0caf5] hover:text-[#7aa2f7] hover:bg-[#1a1b26]/60 rounded-lg transition-all duration-300 group hover:translate-x-1"
                                    >
                                        <svg
                                            class="w-4 h-4 text-[#9ece6a]"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
                                            />
                                        </svg>
                                        <span class="font-medium">
                                            Website Wiki
                                        </span>
                                        <svg
                                            class="ml-auto w-3 h-3 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                            />
                                        </svg>
                                    </a>
                                )
                            }
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Mobile Menu Button -->
            <button
                id="mobile-menu-toggle"
                class="lg:hidden text-[#c0caf5] hover:text-[#7aa2f7] transition-colors duration-300 p-2 rounded-lg hover:bg-[#24283b]/50 hover:scale-[1.02] active:scale-[0.98]"
                aria-label="Toggle menu"
            >
                <svg
                    id="menu-icon"
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
                <svg
                    id="close-icon"
                    class="w-6 h-6 hidden"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>
    </div>
</header>

<!-- Mobile Menu Backdrop -->
<div
    id="mobile-backdrop"
    class="fixed inset-0 bg-black/50 backdrop-blur-sm z-40 lg:hidden opacity-0 pointer-events-none transition-opacity duration-300"
>
</div>

<!-- Mobile Menu -->
<nav
    id="mobile-menu"
    class="fixed top-0 right-0 h-full w-80 max-w-[85vw] bg-[#1a1b26]/95 backdrop-blur-xl border-l border-[#565f89]/30 z-50 lg:hidden overflow-y-auto translate-x-full transition-transform duration-300 ease-in-out"
>
    <!-- Mobile Menu Header -->
    <div
        class="flex items-center justify-between p-6 border-b border-[#565f89]/20"
    >
        <div class="flex items-center gap-3">
            <img
                src={authorConfig.avator}
                alt="Author Avatar"
                class="w-10 h-10 rounded-full border-2 border-[#7aa2f7]/30"
            />
            <div>
                <h2
                    class="text-lg font-bold bg-gradient-to-r from-[#c0caf5] to-[#a9b1d6] bg-clip-text text-transparent"
                >
                    {authorConfig.SiteName}
                </h2>
                <p class="text-xs text-[#a9b1d6]">Developer & Creator</p>
            </div>
        </div>
        <button
            id="mobile-menu-close"
            class="text-[#c0caf5] hover:text-[#7aa2f7] p-2 rounded-lg hover:bg-[#24283b]/50 transition-colors duration-300 hover:scale-[1.02] active:scale-[0.98]"
        >
            <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
    </div>

    <!-- Mobile Menu Items -->
    <div class="p-6 space-y-2">
        <a
            href="/"
            class="mobile-nav-link flex items-center text-[#c0caf5] hover:text-[#7aa2f7] py-3 px-4 rounded-lg hover:bg-[#24283b]/80 border border-transparent hover:border-[#565f89]/30 transition-all duration-300 group opacity-0 translate-y-4"
            style="animation-delay: 0.1s"
        >
            <svg
                class="w-5 h-5 mr-3 text-[#7aa2f7] group-hover:text-[#bb9af7] transition-colors duration-300"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                ></path>
            </svg>
            <span class="font-medium text-base">Home</span>
            <svg
                class="ml-auto w-4 h-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                ></path>
            </svg>
        </a>

        {
            featureFlags.showBlog && (
                <a
                    href="/blog"
                    class="mobile-nav-link flex items-center text-[#c0caf5] hover:text-[#7aa2f7] py-3 px-4 rounded-lg hover:bg-[#24283b]/80 border border-transparent hover:border-[#565f89]/30 transition-all duration-300 group opacity-0 translate-y-4"
                    style="animation-delay: 0.15s"
                >
                    <svg
                        class="w-5 h-5 mr-3 text-[#7aa2f7] group-hover:text-[#bb9af7] transition-colors duration-300"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                        />
                    </svg>
                    <span class="font-medium text-base">Articles</span>
                    <svg
                        class="ml-auto w-4 h-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                        />
                    </svg>
                </a>
            )
        }

        {
            featureFlags.showNewsletter && (
                <a
                    href="/newsletter-subscribe"
                    class="mobile-nav-link flex items-center text-[#c0caf5] hover:text-[#7aa2f7] py-3 px-4 rounded-lg hover:bg-[#24283b]/80 border border-transparent hover:border-[#565f89]/30 transition-all duration-300 group opacity-0 translate-y-4"
                    style="animation-delay: 0.2s"
                >
                    <svg
                        class="w-5 h-5 mr-3 text-[#7aa2f7] group-hover:text-[#bb9af7] transition-colors duration-300"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
