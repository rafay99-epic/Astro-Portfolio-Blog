---
const { title, description, imageUrl, technologies, githubLink, deployedLink } =
  Astro.props;
import { Image } from "astro:assets";
---

<div class="project-card">
  <div class="image-container">
    <Image
      src={imageUrl || ""}
      alt={title}
      format="avif"
      height={500}
      width={500}
    />
  </div>
  <div class="content">
    <h3>{title}</h3>

    <p>{description}</p>
    <div class="technologies">
      {
        technologies.map((technology) => (
          <span class="technology-chip">{technology}</span>
        ))
      }
    </div>
    <div class="links">
      {
        githubLink && (
          <a href={githubLink} target="_blank" aria-label="GitHub">
            <i class="fab fa-github" />
          </a>
        )
      }
      {
        deployedLink && (
          <a href={deployedLink} target="_blank" aria-label="Deployed Location">
            <i class="fas fa-external-link-alt" />
          </a>
        )
      }
    </div>
  </div>
</div>

<style>
  .project-card {
    border-radius: 15px;
    border: 1px solid rgba(76, 80, 106, 0.25);
    background-color: #1f2335;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    width: fit-content;
    max-width: 400px;
    box-shadow: var(--box-shadow);
  }

  .image-container img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .content {
    padding: 8px;
    color: #f8f8f8;
  }

  .content h3 {
    margin-top: 0;
    color: #7aa2f7;
  }

  .technologies .technology-chip {
    display: inline-block;
    margin: 4px;
    padding: 2px 8px;
    background-color: rgba(59, 66, 82, 1);
    color: #f8f8f8;
    border-radius: 8px;
  }

  .links a {
    display: inline-block;
    margin-right: 10px;
    text-decoration: none;
    color: #7aa2f7;
  }
</style>
