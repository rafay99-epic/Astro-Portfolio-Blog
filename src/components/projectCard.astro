---
// Import necessary scripts or styles here
const { title, description, imageUrl, technologies, githubLink, deployedLink } =
  Astro.props;
---

<div class="project-card">
  <div class="image-container">
    <img src={imageUrl} alt={title} />
  </div>
  <div class="content">
    <h3>{title}</h3>

    <p>{description}</p>
    <div class="technologies">
      {
        technologies.map((technology) => (
          <span class="technology-chip">{technology}</span>
        ))
      }
    </div>
    <div class="links">
        {
          githubLink && (
            <a href={githubLink} target="_blank" aria-label="GitHub">
              <i class="fab fa-github"></i> <!-- Font Awesome GitHub icon -->
            </a>
          )
        }
        {
          deployedLink && (
            <a href={deployedLink} target="_blank" aria-label="Deployed Location">
              <i class="fas fa-external-link-alt"></i> <!-- Font Awesome external link icon -->
            </a>
          )
        }
      </div>
  </div>
</div>

<style>
.project-card {
  border-radius: 15px;
  border: 1px solid rgba(76, 80, 106, 0.25);
  background-color: #1f2335;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  width: fit-content;
  max-width: 400px;
  box-shadow: var(--box-shadow);
}

.image-container img {
  width: 100%;
  height: 200px;
  object-fit: cover;
}

.content {
  padding: 8px;
  color: #F8F8F8;
}

.content h3 {
  margin-top: 0;
  color: #7aa2f7;
}

.technologies .technology-chip {
  display: inline-block;
  margin: 4px;
  padding: 2px 8px;
  background-color: rgba(59, 66, 82, 1);
  color: #F8F8F8;
  border-radius: 8px;
}

.links a {
  display: inline-block;
  margin-right: 10px;
  text-decoration: none;
  color: #7aa2f7;
}
</style>
