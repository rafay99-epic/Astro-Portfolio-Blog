---
import "@styles/global.css";
interface Props {
  title: string;
  description: string;
  image?: string;
}
import { SEOMetadata } from "astro-seo-metadata";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const { title, description, image = "/Rafay99.webp" } = Astro.props;
import { ClientRouter } from "astro:transitions";
import FeatureFlage from "@config/featureFlag/featureFlag.json";
