---
import BaseHead from "@astro/base/BaseHead.astro";
import Header from "@astro/header/Header.astro";
import Footer from "@astro/footer/Footer.astro";
import ArticleHeader from "@astro/blog/ArticleHeader.astro";
import ContentContainer from "@astro/blog/ContentContainer.astro";
import ShareButtons from "@react/blog/interactions/socialButton";
import authorConfig from "@config/siteConfig/info.json";
import SpeedInsights from "@vercel/speed-insights/astro";
import { featureFlags } from "@config/featureFlag/featureFlag.json";

const pageUrl = Astro.url.href;
export const prerender = true;

type Props = {
  Projecttitle: string;
  ProjectDescription: string;
  ProjectImage?: string;
  ProjectTech?: string[];
};

const { Projecttitle, ProjectDescription, ProjectImage, ProjectTech } =
  Astro.props;

try {
  if (!featureFlags.showProjects) {
    return Astro.redirect("/access-denied");
  }
} catch (error) {
  return Astro.redirect("/404");
}
---

<html lang="en">
  <head>
    <BaseHead title={Projecttitle} description={ProjectDescription} />
    <SpeedInsights />
    <style>
      .project-container {
        min-height: 100vh;
        position: relative;
      }

      .main-content {
        animation: fadeInUp 0.8s ease-out;
      }

      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .project-image-section {
        animation: fadeIn 1s ease-out 0.2s both;
        margin-bottom: 2rem;
      }

      .project-image {
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(122, 162, 247, 0.2);
        position: relative;
        background: linear-gradient(
          135deg,
          rgba(26, 27, 38, 0.6),
          rgba(36, 40, 59, 0.6)
        );
        backdrop-filter: blur(20px);
      }

      .project-image img {
        width: 100%;
        height: auto;
        display: block;
        transition: transform 0.3s ease;
      }

      .project-image:hover img {
        transform: scale(1.02);
      }

      .share-section {
        display: flex;
        justify-content: center;
        margin: 2rem 0;
        animation: fadeIn 1s ease-out 0.4s both;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }

      .tech-section {
        animation: slideInUp 0.8s ease-out 0.6s both;
        margin: 2rem 0;
      }

      .tech-container {
        background: rgba(26, 27, 38, 0.6);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(86, 95, 137, 0.2);
        border-radius: 20px;
        padding: 32px;
        position: relative;
        overflow: hidden;
      }

      .tech-container::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(
          135deg,
          rgba(122, 162, 247, 0.03) 0%,
          rgba(158, 206, 106, 0.03) 100%
        );
        pointer-events: none;
      }

      .tech-header {
        text-align: center;
        margin-bottom: 2rem;
        position: relative;
        z-index: 1;
      }

      .tech-title {
        font-size: 1.8rem;
        font-weight: bold;
        background: linear-gradient(135deg, #7aa2f7, #9ece6a);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 0.5rem;
      }

      .tech-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
        justify-content: center;
        position: relative;
        z-index: 1;
      }

      .tech-chip {
        background: linear-gradient(
          135deg,
          rgba(122, 162, 247, 0.2),
          rgba(187, 154, 247, 0.2)
        );
        border: 1px solid rgba(122, 162, 247, 0.3);
        color: #c0caf5;
        padding: 8px 16px;
        border-radius: 12px;
        font-size: 14px;
        font-weight: 500;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
        position: relative;
        overflow: hidden;
      }

      .tech-chip::before {
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(
          90deg,
          transparent,
          rgba(255, 255, 255, 0.1),
          transparent
        );
        transition: left 0.5s ease;
      }

      .tech-chip:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(122, 162, 247, 0.3);
        border-color: rgba(122, 162, 247, 0.5);
      }

      .tech-chip:hover::before {
        left: 100%;
      }

      .content-section {
        animation: slideInUp 0.8s ease-out 0.8s both;
      }

      @keyframes slideInUp {
        from {
          opacity: 0;
          transform: translateY(40px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      /* Enhanced Typography for Project Content */
      .project-typography {
        line-height: 1.8;
        font-size: 1.1rem;
      }

      .project-typography h1,
      .project-typography h2,
      .project-typography h3,
      .project-typography h4,
      .project-typography h5,
      .project-typography h6 {
        margin-top: 2.5rem;
        margin-bottom: 1rem;
        scroll-margin-top: 100px;
      }

      .project-typography h2 {
        border-left: 4px solid #7aa2f7;
        padding-left: 1rem;
        background: rgba(122, 162, 247, 0.05);
        padding: 0.5rem 1rem;
        border-radius: 8px;
        color: #7aa2f7;
      }

      .project-typography h3 {
        color: #9ece6a;
        position: relative;
      }

      .project-typography h3::before {
        content: "üöÄ";
        margin-right: 0.5rem;
      }

      @media (max-width: 768px) {
        .project-typography {
          font-size: 1rem;
          line-height: 1.7;
        }

        .tech-container {
          padding: 24px;
        }

        .tech-title {
          font-size: 1.5rem;
        }

        .tech-grid {
          gap: 8px;
        }

        .tech-chip {
          font-size: 13px;
          padding: 6px 12px;
        }
      }
    </style>
  </head>

  <body class="project-container">
    <Header />

    <main class="w-full max-w-6xl mx-auto px-4 py-12 main-content">
      <article>
        {/* Article Header */}
        <ArticleHeader
          title={Projecttitle}
          description={ProjectDescription}
          pubDate={new Date()}
          badge={{
            text: "Project",
            icon: "üöÄ",
          }}
          type="project"
        />

        {/* Project Image Section */}
        {
          ProjectImage && (
            <div class="project-image-section">
              <div class="project-image">
                <img
                  src={ProjectImage}
                  alt={Projecttitle}
                  width="1020"
                  height="510"
                  loading="lazy"
                />
              </div>
            </div>
          )
        }

        {/* Share Section */}
        <div>
          <ShareButtons url={pageUrl} pagetitle="Project" client:load />
        </div>

        {/* Technology Section */}
        {
          ProjectTech && ProjectTech.length > 0 && (
            <div class="tech-section">
              <div class="tech-container">
                <div class="tech-header">
                  <h2 class="tech-title">üõ†Ô∏è Technologies Used</h2>
                  <p class="text-[#a9b1d6] text-sm">
                    Built with modern tools and frameworks
                  </p>
                </div>
                <div class="tech-grid">
                  {ProjectTech.map((tech) => (
                    <span class="tech-chip">{tech}</span>
                  ))}
                </div>
              </div>
            </div>
          )
        }

        {/* Content Section */}
        <div class="content-section">
          <ContentContainer withBackground={true} class="project-typography">
            <slot />
          </ContentContainer>
        </div>
      </article>
    </main>

    <Footer />
  </body>
</html>
