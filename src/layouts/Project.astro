---
import BaseHead from "@astro/base/BaseHead.astro";
import Header from "@astro/header/Header.astro";
import Footer from "@astro/footer/Footer.astro";
import ShareButtons from "@react/blog/interactions/socialButton";
import { featureFlags } from "@config/featureFlag/featureFlag.json";
import MermaidRenderer from "@react/blog/enhancements/diagram-renderer/MermaidRenderer";
import CodeCopySimple from "@react/blog/enhancements/code-copy/CodeCopySimple";

const pageUrl = Astro.url.href;
export const prerender = true;

type Props = {
  Projecttitle: string;
  ProjectDescription: string;
  ProjectTech?: string[];
};

const { Projecttitle, ProjectDescription, ProjectTech } = Astro.props;

try {
  if (!featureFlags.showProjects) {
    return Astro.redirect("/access-denied");
  }
} catch (error) {
  return Astro.redirect("/404");
}
---

<html lang="en">
  <head>
    <BaseHead title={Projecttitle} description={ProjectDescription} />
    <style>
      /* Ensure consistent background */
      html {
        background-color: #1a1b26;
      }

      body {
        background-color: #1a1b26;
      }

      .project-container {
        min-height: 100vh;
        position: relative;
        background-color: #1a1b26;
      }

      /* Hide scrollbar for better UX */
      .scrollbar-hide {
        -ms-overflow-style: none; /* IE and Edge */
        scrollbar-width: none; /* Firefox */
      }
      .scrollbar-hide::-webkit-scrollbar {
        display: none; /* Chrome, Safari, Opera */
      }

      .project-header {
        background: linear-gradient(
          135deg,
          rgba(122, 162, 247, 0.1) 0%,
          rgba(187, 154, 247, 0.1) 100%
        );
        backdrop-filter: blur(20px);
        border: 1px solid rgba(122, 162, 247, 0.2);
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
      }

      .project-header::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(
          90deg,
          transparent,
          rgba(122, 162, 247, 0.5),
          transparent
        );
      }

      .project-badge {
        background: linear-gradient(135deg, #7aa2f7, #bb9af7);
        border-radius: 12px;
        padding: 8px 16px;
        color: white;
        font-weight: 600;
        font-size: 14px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        box-shadow: 0 4px 20px rgba(122, 162, 247, 0.3);
        margin-bottom: 1rem;
      }

      .tech-section {
        background: rgba(26, 27, 38, 0.6);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(86, 95, 137, 0.2);
        border-radius: 16px;
        padding: 1.5rem;
        margin-bottom: 2rem;
      }

      .tech-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        justify-content: center;
      }

      .tech-chip {
        background: linear-gradient(
          135deg,
          rgba(122, 162, 247, 0.2),
          rgba(187, 154, 247, 0.2)
        );
        border: 1px solid rgba(122, 162, 247, 0.3);
        color: #c0caf5;
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 13px;
        font-weight: 500;
        transition: all 0.3s ease;
      }

      .tech-chip:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 15px rgba(122, 162, 247, 0.3);
      }

      .project-content {
        background: rgba(26, 27, 38, 0.6);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(86, 95, 137, 0.2);
        border-radius: 20px;
        padding: 2rem;
        line-height: 1.7;
        font-size: 1.1rem;
      }

      .project-content h1,
      .project-content h2,
      .project-content h3,
      .project-content h4,
      .project-content h5,
      .project-content h6 {
        margin-top: 2rem;
        margin-bottom: 1rem;
        scroll-margin-top: 100px;
      }

      .project-content h2 {
        border-left: 4px solid #7aa2f7;
        padding-left: 1rem;
        background: rgba(122, 162, 247, 0.05);
        padding: 0.5rem 1rem;
        border-radius: 8px;
      }

      .project-content h3 {
        color: #bb9af7;
      }

      .project-content blockquote {
        background: rgba(122, 162, 247, 0.1);
        border-left: 4px solid #7aa2f7;
        padding: 1rem 1.5rem;
        margin: 1.5rem 0;
        border-radius: 0 8px 8px 0;
      }

      .project-content ul li::marker {
        color: #7aa2f7;
      }

      .project-content ol li::marker {
        color: #bb9af7;
        font-weight: bold;
      }

      .share-section {
        display: flex;
        justify-content: center;
        margin: 2rem 0;
      }

      @media (max-width: 768px) {
        .project-header {
          padding: 1.5rem;
        }

        .project-content {
          padding: 1.5rem;
          font-size: 1rem;
        }

        .tech-section {
          padding: 1rem;
        }

        .tech-chip {
          font-size: 12px;
          padding: 4px 8px;
        }
      }
    </style>
  </head>

  <body class="project-container" style="overflow-x: hidden; overflow-y: auto;">
    <Header />

    <main class="w-full max-w-7xl mx-auto">
      <article>
        {/* Project Header - Title Only */}
        <div class="project-header text-center">
          <div class="project-badge">
            <span>üöÄ</span>
            Project
          </div>
          <h1
            class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-4 leading-tight"
            transition:name={`project-title-${Projecttitle}`}
          >
            <span
              class="bg-gradient-to-r from-[#7aa2f7] via-[#bb9af7] to-[#9ece6a] bg-clip-text text-transparent"
            >
              {Projecttitle}
            </span>
          </h1>
          {
            ProjectDescription && (
              <p class="text-lg text-[#a9b1d6] max-w-3xl mx-auto leading-relaxed">
                {ProjectDescription}
              </p>
            )
          }
        </div>

        {/* Technologies Section - Only if tech exists */}
        {
          ProjectTech && ProjectTech.length > 0 && (
            <div class="tech-section">
              <h3 class="text-center text-lg font-semibold mb-3 text-[#c0caf5]">
                üõ†Ô∏è Technologies Used
              </h3>
              <div class="tech-grid">
                {ProjectTech.map((tech) => (
                  <span class="tech-chip">{tech}</span>
                ))}
              </div>
            </div>
          )
        }

        {/* Project Content */}
        <div class="project-content">
          <slot />
        </div>

        {/* Share Buttons */}
        <div class="share-section">
          <ShareButtons url={pageUrl} pagetitle="Project" client:visible />
        </div>
      </article>

      <MermaidRenderer client:load />
      <CodeCopySimple client:load />
    </main>

    <script is:inline>
      // Prevent auto-scroll restoration and conflicts
      if ("scrollRestoration" in history) {
        history.scrollRestoration = "manual";
      }

      // Prevent initial scroll jumping
      document.addEventListener("DOMContentLoaded", function () {
        setTimeout(() => {
          window.scrollTo(0, 0);
        }, 0);
      });
    </script>

    <Footer />
  </body>
</html>
