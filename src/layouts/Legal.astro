---
import BaseHead from "@astro/base/BaseHead.astro";
import ContentContainer from "@astro/blog/layout/ContentContainer.astro";
import Footer from "@astro/footer/Footer.astro";
import Header from "@astro/header/Header.astro";
import authorConfig from "@config/siteConfig/info.json";

export const prerender = true;

interface Props {
	title: string;
	description: string;
	lastUpdated?: Date;
}

const { title, description, lastUpdated } = Astro.props;

const formattedUpdated = lastUpdated
	? new Intl.DateTimeFormat("en-US", {
			year: "numeric",
			month: "long",
			day: "numeric",
		}).format(lastUpdated)
	: null;
---

<html lang="en">
  <head>
    <BaseHead
      title={`${title} | ${authorConfig.SiteName}`}
      description={description}
    />

    <style>
      .legal-container {
        min-height: 100vh;
      }

      .legal-hero {
        text-align: center;
        margin-bottom: 2.5rem;
      }

      .legal-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.4rem 1rem;
        border-radius: 999px;
        border: 1px solid rgba(122, 162, 247, 0.3);
        background: rgba(122, 162, 247, 0.1);
        color: #7aa2f7;
        font-size: 0.85rem;
        font-weight: 600;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        margin-bottom: 1.25rem;
      }

      .legal-title {
        font-size: clamp(2.4rem, 4vw, 3.8rem);
        font-weight: 800;
        line-height: 1.1;
        margin-bottom: 1rem;
      }

      .legal-title span {
        background: linear-gradient(135deg, #7aa2f7, #bb9af7, #9ece6a);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .legal-description {
        max-width: 62ch;
        margin: 0 auto 1.25rem;
        color: #a9b1d6;
        font-size: 1.05rem;
      }

      .legal-meta {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.35rem 0.95rem;
        border-radius: 999px;
        border: 1px solid rgba(86, 95, 137, 0.35);
        background: rgba(26, 27, 38, 0.6);
        color: #c0caf5;
        font-size: 0.95rem;
      }

      .legal-meta span {
        color: #9ece6a;
      }

      .legal-typography {
        line-height: 1.85;
        font-size: 1.05rem;
      }

      .legal-typography h2,
      .legal-typography h3,
      .legal-typography h4,
      .legal-typography h5,
      .legal-typography h6 {
        margin-top: 2.5rem;
        margin-bottom: 1rem;
        scroll-margin-top: 100px;
      }

      .legal-typography h2 {
        border-left: 4px solid #7aa2f7;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        background: rgba(122, 162, 247, 0.08);
      }

      .legal-typography h3 {
        color: #bb9af7;
        position: relative;
      }

      .legal-typography h3::before {
        content: ">";
        color: #9ece6a;
        margin-right: 0.5rem;
      }

      .legal-typography h4 {
        color: #9ece6a;
        font-weight: 600;
      }

      .legal-typography p {
        margin-bottom: 1rem;
        color: #c0caf5;
      }

      .legal-typography a {
        color: #7aa2f7;
        text-decoration: underline;
        text-decoration-thickness: 2px;
        text-underline-offset: 4px;
      }

      .legal-typography ul,
      .legal-typography ol {
        padding-left: 1.6rem;
        margin: 1.4rem 0;
      }

      .legal-typography li {
        margin-bottom: 0.6rem;
      }

      .legal-typography ul li::marker {
        color: #9ece6a;
      }

      .legal-typography ol li::marker {
        color: #bb9af7;
        font-weight: 700;
      }

      .legal-typography blockquote {
        background: rgba(122, 162, 247, 0.1);
        border-left: 4px solid #7aa2f7;
        padding: 1rem 1.5rem;
        margin: 1.5rem 0;
        border-radius: 0 8px 8px 0;
      }

      @media (max-width: 768px) {
        .legal-description {
          font-size: 1rem;
        }

        .legal-typography {
          font-size: 1rem;
          line-height: 1.75;
        }
      }
    </style>
  </head>

  <body class="legal-container">
    <Header />

    <main class="mx-auto w-full max-w-7xl px-4 pb-16 pt-20">
      <section class="legal-hero">
        <div class="legal-badge">Legal</div>
        <h1 class="legal-title">
          <span>{title}</span>
        </h1>
        <p class="legal-description">{description}</p>
        {
          formattedUpdated && (
            <div class="legal-meta">
              <span>Last updated</span>
              <time datetime={lastUpdated?.toISOString()}>
                {formattedUpdated}
              </time>
            </div>
          )
        }
      </section>

      <ContentContainer withBackground={true} class="legal-typography">
        <slot />
      </ContentContainer>
    </main>

    <Footer class="mt-auto" />
  </body>
</html>
