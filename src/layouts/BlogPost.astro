---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import { Image } from "astro:assets";
import authorImage from "../assets/author.jpg";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      .ad-container {
        margin: 2em 0;
        text-align: center;
      }
      #ad-blocker-message {
        display: none;
        color: red;
        font-weight: bold;
      }
    </style>
  </head>

  <body>
    <Header />
    <main data-pagefind-body class="w-full max-w-5xl mx-auto px-4 py-8">
      <article>
        <div class="w-full mb-4">
          {
            heroImage && (
              <Image
                src={heroImage || ""}
                alt="hero Image Blog"
                format="avif"
                width={1020}
                height={510}
              />
            )
          }
        </div>
        <div
          data-aos="fade-up"
          data-aos-delay="300"
          data-aos-anchor-placement="top-bottom"
          class="prose mx-auto text-gray-800 text-justify"
        >
          <div class="mb-8 text-center">
            <div class="mb-2 text-white">
              <FormattedDate date={pubDate} />
              {
                updatedDate && (
                  <div class="italic">
                    Last updated on <FormattedDate date={updatedDate} />
                  </div>
                )
              }
            </div>
            <h1 class="text-3xl font-bold mb-4">{title}</h1>
            <div class="flex items-center justify-center mt-4">
              <Image
                src={authorImage}
                alt="author Avatar"
                format="avif"
                class="w-12 h-12 rounded-full mr-2"
              />
              <span class="text-white" id="authorname">Abdul Rafay</span>
            </div>
            <hr class="mt-4" />
          </div>
          <slot />
          <div class="my-8 text-center">
            <h2 class="text-2xl font-semibold mb-4">Advertisements</h2>
            <script
              async="async"
              data-cfasync="false"
              src="//pl24384595.cpmrevenuegate.com/75a9e4d4cdc61042594f971bcbc143dd/invoke.js"
            ></script>
            <div id="container-75a9e4d4cdc61042594f971bcbc143dd"></div>
            <div id="ad-blocker-message">
              It looks like you are using an ad blocker. Please disable it to
              support our site.
            </div>
            <script src="/src/scripts/AdBlocker/addblocker.js"></script>
          </div>
          <div>
            <h2 class="text-2xl font-semibold mb-4">Comments</h2>
            <script
              src="https://giscus.app/client.js"
              data-repo="rafay99-epic/Astro-Portfolio-Blog"
              data-repo-id="R_kgDOMZI1RA"
              data-category="General"
              data-category-id="DIC_kwDOMZI1RM4ChJFA"
              data-mapping="url"
              data-strict="0"
              data-reactions-enabled="1"
              data-emit-metadata="0"
              data-input-position="bottom"
              data-theme="dark"
              data-lang="en"
              crossorigin="anonymous"
              async></script>
          </div>
        </div>
      </article>
    </main>
    <Footer />
  </body><link
    href="https://unpkg.com/aos@2.3.1/dist/aos.css"
    rel="stylesheet"
  />
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js" onload="AOS.init()"
  ></script>
</html>
